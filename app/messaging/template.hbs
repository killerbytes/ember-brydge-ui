<div class="container" style="margin-top: 30px">
<div class="row">
  <div class="medium-4 columns">
    {{#link-to "messaging.compose" }}
      <button class="secondary hollow button">Compose</button>
    {{/link-to}}

  </div>
</div>

<div class="row">
  <div class="medium-4 columns">

    {{#ui-list
    size='default'
     mood='mood'
     skin='default'
     compressed=false
     sortAscending=true
     as |list| }}
    {{#each model as |chat| }}
      {{#link-to "conversation" chat.id}}
        {{ui-item
             title=chat.other.name
             icon='user'
             list=list }}
      {{/link-to}}

    {{/each}} {{/ui-list}}
  </div>
  <div class="medium-8 columns">
  	{{outlet}}
  </div>
</div>
</div>
