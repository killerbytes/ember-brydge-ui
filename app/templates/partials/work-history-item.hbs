<section>
  <div class="section-main">
    <div class="title">{{item.title}}</div>
    <strong><a>{{item.company}}</a></strong>
    <div class="text-gray">
      <strong>{{item.location}}</strong>
    </div>
    <div class="text-gray">
      {{term-date-format item.startFrom}} -
      {{#if item.currentCompany}}
        Present ({{time-diff item.startFrom item.endAt}})
      {{else}}
        {{term-date-format item.endAt}} ({{time-diff item.startFrom item.endAt}})
      {{/if}}
    </div>
  </div>
  {{#if item.content}}
    {{#zf-accordion-menu class="section-accordion"}}
      <li>
        <a class="more no-arrow more-top"><span class="content-more">Show More</span><span class="content-less">Hide</span></a>
        <ul class="section-accordion-content no-bullet">
          <li class="description-content">
            {{brydge-linkify text=item.content class="paragraph"}}
          </li>
        </ul>
        <a class="more no-arrow"><span class="content-more">Read more about {{profile.firstName}}â€™s role at this job</span><span class="content-less">Hide</span></a>
      </li>
    {{/zf-accordion-menu}}
  {{/if}}
</section>
