<section>
	<strong>Your Business Industry</strong>
	{{#if profile.industryId}}
		<ul class="no-bullet">
			<li>
				{{action-checkbox-bind value=profile.industryId text=profile.industry action="checkboxChanged" name="industryId" checked=industryId reversed=true}}
			</li>
		</ul>
		<p>{{#link-to 'me.edit' profile.id}}Edit Business Industry{{/link-to}}</p>
	{{else}}
		<p>{{#link-to 'me.edit' profile.id}}Add Business Industry{{/link-to}}</p>	
	{{/if}}

	<strong>Your Occupational Industry</strong>
	{{#if isOccupational }}
		<ul class="no-bullet">	
			<li>
				{{action-checkbox-bind value=profile.occupationOneId text=profile.occupationOne action="checkboxChanged" name="occupationOne" checked=occupationOne reversed=true}}
			</li>
			<li>
				{{action-checkbox-bind value=profile.occupationTwoId text=profile.occupationTwo action="checkboxChanged" name="occupationTwo" checked=occupationTwo reversed=true}}
			</li>
		</ul>
		<p>{{#link-to 'me.edit' profile.id}}Edit Occupational Industry{{/link-to}}</p>
	{{else}}
		<p>{{#link-to 'me.edit' profile.id}}Add Occupational Industry{{/link-to}}</p>
	{{/if}}
</section>
	<hr>
<section>
	<p class="dim-text">Broadcast will also be shared with Connections by default</p>
</section>
