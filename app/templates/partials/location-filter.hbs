
{{input value=selected.name key-down="clear" key-up="onchange" focus-in="open"}}
<div class="wrapper {{if isOpen 'is-open'}}">
	<ul class="no-bullet shadowed">
	{{#each list as |item|}}
		<li {{action "select" item preventDefault=false}}>{{item.name}}</li>
	{{/each}}
	</ul>
	<a class="button success expanded" data-open="locationModal">Can't find your city?</a>
	
</div>
