	<form class="channel-select">
		<div class="row collapse">
			<div class="columns medium-6">
				<section>
					<div class="sub-title">Your Business Industry
						({{#if profile.industryOneId ~}}
							{{link-to "Edit" "me.edit" (query-params tab="industry")}}
						{{~ else ~}}
							{{link-to "Add" "me.edit" (query-params tab="industry") ~}}
						{{/if ~}})</div>
						{{#if profile.industryOneId}}
							<ul class="no-bullet content-pad">
								<li>
									{{action-checkbox-bind value=profile.industryOneId text=profile.industryOneName action="checkboxChanged" name="industryOneId" checked=industryOneId }}
								</li>
							</ul>
						{{else}}
							<div class="padded-h">
								Add Business Industry
							</div>
						{{/if}}
				</section>
			</div>
			<div class="columns medium-6">
				<section>
					<div class="sub-title">Your Occupational Industry
						({{#if isOccupational ~}}
							{{link-to "Edit" "me.edit" (query-params tab="occupindustry")}}
						{{~ else ~}}
							{{link-to "Add" "me.edit" (query-params tab="occupindustry") ~}}
						{{/if}})</div>
					{{#if isOccupational }}
						<ul class="no-bullet content-pad">
							{{#if profile.industryTwoId}}
								<li>
									{{action-checkbox-bind value=profile.industryTwoId text=profile.industryTwoName action="checkboxChanged" name="industryTwoName" checked=industryTwoId }}
								</li>
							{{/if}}
							{{#if profile.industryThreeId}}
								<li>
									{{action-checkbox-bind value=profile.industryThreeId text=profile.industryThreeName action="checkboxChanged" name="industryThreeName" checked=industryThreeId }}
								</li>
							{{/if}}
						</ul>
					{{else}}
						<div class="padded-h">
							Add Occupational Industry
						</div>
					{{/if}}

				</section>
			</div>
		</div>
	</form>
