<div class="box">
  <section>
    <h4>Business Industry</h4>
    {{#if profile.industryOneName}}
      <strong><a href="">{{profile.industryOneName}}</a></strong>
    {{else}}
      {{#if isOwner}}
        <div class="empty-message">
          Add Business Industry
        </div>
      {{else}}
        <div class="empty-message">
          {{profile.firstName}} hasn't added a Business Industry
        </div>
      {{/if}}
    {{/if}}
    {{#if isOwnerx}}
      {{#link-to "me.edit" (query-params tab="industry")}}
        <i class="icons pencil"></i>
      {{/link-to}}
    {{/if}}
  </section>

  <section>
    <h4>Occupational Industry</h4>
    {{#if isNotEmptyOccupation}}
      <div>
        <strong><a href="">{{profile.industryTwoName}}</a></strong>
      </div>
      <div>
        <strong><a href="">{{profile.industryThreeName}}</a></strong>
      </div>
    {{else}}
      {{#if isOwner}}
      <div class="empty-message">
        Add Occupational Industry
      </div>
      {{else}}
      <div class="empty-message">
        {{profile.firstName}} hasn't added an Occupational Industry
      </div>
      {{/if}}
    {{/if}}
    {{#if isOwnerx}}
      {{#link-to "me.edit" (query-params tab="occupindustry") }}
        <i class="icons pencil"></i>
      {{/link-to}}
    {{/if}}
  </section>

  <section>
    <h4>Snapshot
      {{#if isOwnerx}}
        {{#link-to "me.edit" (query-params tab="snapshot")}}
          <i class="icons pencil pull-right"></i>
        {{/link-to}}
      {{/if}}
    </h4>
    {{#if profile.snapshot}}
      {{profile.snapshot}}
    {{else}}
      <div class="empty-message">
        {{profile.firstName}} hasn't added a Snapshot
      </div>
    {{/if}}
  </section>
</div>

{{#if latestQuestion}}
<div class="box rounded question-box">
  <div class="section-group section-accordion-group">
    <section>
      <div class="section-main">
        <h4>Ask</h4>
        <div class="user mb">
          <div class="avatar" style={{htmlSafeImage latestQuestion.from.profile.avatarUrl }}>
            <img src= {{latestQuestion.from.profile.avatarUrl}} class="hide">
          </div>
          <div class="user-info">
            <span class="name">
              {{link-to latestQuestion.from.profile.fullName "profile" latestQuestion.from.id}}
              asked
              {{link-to latestQuestion.to.profile.fullName "profile" latestQuestion.to.id}}
            </span>
            <div class="timestamp">{{timestamp latestQuestion.updatedAt}}</div>
          </div>
        </div>

        <div class="title">{{latestQuestion.question}}</div>
      </div>
      {{#zf-accordion-menu class="section-accordion" multiOpen=true}}
        <li>
          <ul class="section-accordion-content no-bullet">
            <li>{{{latestQuestion.answer}}}</li>
          </ul>
          <a class="more no-arrow"><span class="content-more">See Answer</span><span class="content-less">Hide Answer</span></a>
        </li>
      {{/zf-accordion-menu}}
    </section>

    <section class="section-footer-links">
      {{#if isOwner }}
        {{link-to "See more questions" 'me.ask'  class="button expanded"}}
      {{else}}
        {{link-to "See more questions" 'ask' profile.id  class="button expanded"}}
      {{/if}}
    </section>
  </div>
</div>
{{/if}}

<div class="box">
  <section>
    <h4>Compliments</h4>
    {{#if latestCompliment}}
      <div class="mb">
        <div class="title">
          {{latestCompliment.title}}!
        </div>
        <div class="content-pad">{{latestCompliment.content}}</div>
      </div>
      <div class="user">
        <div class="avatar" style={{htmlSafeImage latestCompliment.from.content.profile.avatarUrl }}>
          <img src= {{post.user.profile.avatarUrl}} class="hide">
        </div>
        <div class="user-info">
          Complimented by
          <span class="name">
            {{#link-to "profile" latestCompliment.from.id}}
              {{latestCompliment.from.profile.fullName}}
            {{/link-to}}
          </span>
          <div class="timestamp">{{timestamp latestCompliment.updatedAt}}</div>
        </div>
      </div>

    {{else}}
    <div class="empty-message">
      {{profile.firstName}} hasn't received any Compliments
    </div>
    {{/if}}
  </section>
  <section class="section-footer-links">
    {{#if latestCompliment}}
      {{#if isOwner }}
        {{link-to 'See more compliments' 'me.compliments' class="button expanded"}}
      {{else}}
        {{link-to 'See more compliments' 'compliments' latestCompliment.to.id class="button expanded"}}
      {{/if}}
    {{/if}}
  </section>
</div>

