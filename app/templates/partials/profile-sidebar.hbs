<div class="box">
  <section class="hoverable">
    <h4><i class="fa fa-building-o" aria-hidden="true"></i>
      Industries
      {{#if isOwner}}
        {{#link-to "me.edit" (query-params tab="industry") class="editable"}}
          <i class="fa fa-pencil-square-o"></i>
        {{/link-to}}
      {{/if}}
    </h4>
    <ul class="no-bullet">
      {{#each industries as |item|}}
        <li><strong>{{link-to item.text "home" (query-params channels=item.id)}}</strong></li>
      {{else}}
          <li class="empty-message">
            {{#if isOwner}}
              You haven't added any Industries
            {{else}}
              <span class="text-title">{{profile.firstName}}</span> hasn't added any Industries
            {{/if}}
          </li>
      {{/each}}
    </ul>
  </section>


  <section class="hoverable">
    <h4><i class="fa fa-camera-retro" aria-hidden="true"></i>
      Snapshot
      {{#if isOwner}}
        {{#link-to "me.edit" (query-params tab="snapshot") class="editable"}}
          <i class="fa fa-pencil-square-o"></i>
        {{/link-to}}
      {{/if}}
    </h4>
    {{#if profile.snapshot}}
      {{brydge-linkify text=snapshot class="paragraph snapshot"}}
    {{else}}
      <div class="empty-message">
        {{#if isOwner}}
          You haven't added a Snapshot
        {{else}}
          <span class="text-title">{{profile.firstName}}</span> hasn't added a Snapshot
        {{/if}}
      </div>
    {{/if}}
  </section>
</div>

{{#if latestQuestion}}
<div class="box rounded question-box">
  <div class="section-group section-accordion-group">
    <section>
      <div class="section-main">
        <h4><i class="fa fa-quote-left" aria-hidden="true"></i>Ask</h4>
        <div class="user mb">
          <div class="avatar" style={{htmlSafeImage latestQuestion.from.profile.avatarUrl }}>
            <img src= {{latestQuestion.from.profile.avatarUrl}} class="hide">
          </div>
          <div class="user-info">
            {{link-to latestQuestion.from.profile.fullName "profile" latestQuestion.from.id class="name"}} asked {{link-to latestQuestion.to.profile.fullName "profile" latestQuestion.to.id class="name"}}
            <div class="timestamp">
              {{#link-to "ask.detail" latestQuestion.id class="timestamp"}}
                {{timestamp latestQuestion.answeredAt}}
              {{/link-to}}
            </div>

          </div>
        </div>

        <div class="title large">{{latestQuestion.question}}</div>
      </div>
      {{#zf-accordion-menu class="section-accordion accordion-ask-answer" multiOpen=true}}
        <li>
          <a class="more no-arrow more-top"><span class="content-more">See Answer</span><span class="content-less">Hide Answer</span></a>
          <ul class="section-accordion-content no-bullet">
            <li>
              {{brydge-linkify text=latestQuestion.answer class="paragraph answer-content"}}
            </li>
          </ul>
          <a class="more no-arrow"><span class="content-more">See Answer</span><span class="content-less">Hide Answer</span></a>
        </li>
      {{/zf-accordion-menu}}
    </section>

    <section class="section-footer-links">
      {{#if isOwner }}
        {{link-to "Go to Ask" 'me.ask'  class="button expanded"}}
      {{else}}
        {{#link-to 'ask' profile.id  class="button expanded"}}
          Ask <span class="text-title">{{profile.firstName}}</span>
        {{/link-to}}
      {{/if}}
    </section>
  </div>
</div>
{{else}}
  <div class="box">
    <section>
      <h4><i class="fa fa-quote-left" aria-hidden="true"></i>Ask</h4>
      <div class="empty-message">
        {{#if isOwner}}
          You haven't answered any questions
        {{else}}
          <span class="text-title">{{profile.firstName}}</span> hasn't answered any questions
        {{/if}}
      </div>
    </section>
    <section class="section-footer-links">
      {{#if isOwner }}
        {{link-to "Go to Ask" 'me.ask'  class="button expanded"}}
      {{else}}
        {{#link-to 'ask' profile.id  class="button expanded"}}
          Ask <span class="text-title">{{profile.firstName}}</span>
        {{/link-to}}
      {{/if}}
    </section>

  </div>
{{/if}}

<div class="box compliment-card">
  <section>
    <h4><i class="fa fa-thumbs-up" aria-hidden="true"></i>Compliments</h4>
    {{#if latestCompliment}}
      <div class="mb">
        <div class="title large text-title">
          {{latestCompliment.title}}
        </div>
        <div class="content-pad description-content">{{latestCompliment.content}}</div>
      </div>
      <div class="user">
        <div class="avatar" style={{htmlSafeImage latestCompliment.from.content.profile.avatarUrl }}>
          <img src= {{post.user.profile.avatarUrl}} class="hide">
        </div>
        <div class="user-info">
          Complimented by {{link-to latestCompliment.from.profile.fullName "profile" latestCompliment.from.id class="name"}}
          <div class="timestamp">
            {{#link-to "compliments.detail" latestCompliment.id class="timestamp"}}
              {{timestamp latestCompliment.updatedAt}}
            {{/link-to}}
          </div>

        </div>
      </div>

    {{else}}
    <div class="empty-message">
      {{#if isOwner}}
        You haven't received any Compliments
      {{else}}
        <span class="text-title">{{profile.firstName}}</span> hasn't received any Compliments
      {{/if}}
    </div>
    {{/if}}
  </section>
  <section class="section-footer-links">
    {{#if isOwner }}
      {{link-to 'Go to Compliments' 'me.compliments' class="button expanded"}}
    {{else}}
      {{#link-to 'compliments' profile.id class="button expanded"}}
        Compliment <span class="text-title">{{profile.firstName}}</span>
      {{/link-to}}
    {{/if}}
  </section>
</div>
{{#if isOwner}}
  {{ partial "partials/invite-friends" }}
{{/if}}
{{ partial "partials/user-guide-box" }}
{{ partial "footer"}}
