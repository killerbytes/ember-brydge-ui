<div class="box">
  <section>
    <h4>Business Industry</h4>
    {{#if profile.industry}}
      <a href="">{{profile.industry}}</a>
    {{else}}
      {{#if isOwner}}
        <div class="empty-message" style="margin:.5rem; ">
          Add Business Industry
        </div>
      {{else}}
        <div class="empty-message" style="margin:.5rem; ">
          Business Industry
        </div>
      {{/if}}
    {{/if}}
    {{#if isOwnerx}}
      {{#link-to "me.edit" (query-params tab="industry")}}
        <i class="icons pencil"></i>       
      {{/link-to}}
    {{/if}}
  </section>        
  
  <section>
    <h4>Occupational Industry</h4>
    {{#if isNotEmptyOccupation}}
      <div>
        <a href="">{{profile.occupationOne}}</a>
      </div>
      <div>
        <a href="">{{profile.occupationTwo}}</a>
      </div>
    {{else}}
      {{#if isOwner}}
      <div class="empty-message" style="margin:.5rem; ">
        Add Occupational Industry
      </div>
      {{else}}
      <div class="empty-message" style="margin:.5rem; ">
        Occupational Industry
      </div>
      {{/if}}
    {{/if}}
    {{#if isOwnerx}}
      {{#link-to "me.edit" (query-params tab="occupindustry") }}       
        <i class="icons pencil"></i>
      {{/link-to}}
    {{/if}}
  </section>

  <section>
    <h4>Snapshot 
      {{#if isOwnerx}}    
        {{#link-to "me.edit" (query-params tab="snapshot")}}       
          <i class="icons pencil pull-right"></i>
        {{/link-to}}
      {{/if}}
    </h4>
    {{#if profile.snapshot}}
      {{profile.snapshot}}
    {{else}}
      <div class="empty-message">
        {{profile.firstName}} hasn't added a Snapshot
      </div>
    {{/if}}
  </section>
</div>

{{#if latestQuestion}}
<div class="box rounded question-box">
  <div class="section-group section-accordion-group">
    <section>
      <div class="section-main">
        <h4>Ask</h4>
        <div class="user mb">
          {{link-to latestQuestion.from.content.name "profile" latestQuestion.from.content.id }} asked {{link-to latestQuestion.to.content.name "profile" latestQuestion.to.content.id}}
          <div class="text-gray">{{timestamp latestQuestion.createdAt}}</div>
        </div>

        <div class="title">{{latestQuestion.content}}</div>
      </div>
      {{#zf-accordion-menu class="section-accordion" multiOpen=true}}
        <li>
          <ul class="section-accordion-content no-bullet">
            <li>{{{latestQuestion.answer}}}</li>
          </ul>
          <a class="more no-arrow"><span class="content-more">See Answer</span><span class="content-less">Hide Answer</span></a>
        </li>
      {{/zf-accordion-menu}}    
    </section>

    <section class="section-footer-links">
      {{#if isOwner }}
        {{link-to "See more questions" 'me.ask'  class="button expanded"}}
      {{else}}
        {{link-to "See more questions" 'ask' profile.id  class="button expanded"}}
      {{/if}}
    </section>
  </div>  
</div>
{{/if}}

<div class="box">
  <section>
    <h4>Compliments</h4>
    {{#if latestCompliment}}  
      <div class="mb">
        <span class="text-upper">{{latestCompliment.title}}</span> <span class="font-light">{{latestCompliment.content}}</span>
      </div>    
      <div class="user">
        <div class="avatar" style={{htmlSafeImage latestCompliment.from.content.profile.avatarUrl }}>
          <img src= {{post.user.profile.avatarUrl}} class="hide">
        </div>
        <div class="user-info">
          Posted by
          <span class="name">
            {{#link-to "profile" latestCompliment.from.content.id}} 
              {{latestCompliment.from.content.profile.firstName}}
            {{/link-to}}
          </span>
          <div class="timestamp">{{timestamp latestCompliment.createdAt}}</div>
        </div>
      </div>

    {{else}}
    <div class="empty-message">
      {{profile.firstName}} hasn't received any Compliments
    </div>
    {{/if}}  
  </section>
  <section class="section-footer-links">
    {{#if latestCompliment}}
      {{#if isOwner }}
        {{link-to 'See all' 'me.compliments' class="button"}}
      {{else}}
        {{link-to 'See all' 'compliments' latestCompliment.to.id class="button"}}
      {{/if}}
    
        <a class="float-right button" data-open="complimentModal">Post a compliment</a>
      {{#if isConnected}}
      {{/if}}
    {{else}}
      {{#if isConnected}}
        <a class="float-right button" data-open="complimentModal">Post a compliment</a>
      {{/if}}  
    {{/if}}
  </section>    
</div>
