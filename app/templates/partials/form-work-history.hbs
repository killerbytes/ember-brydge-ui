<div class="row">
	<div class="columns">
		<label>
			Job Title
			{{form-input model=item valuePath="title"}}
		</label>
	</div>
</div>
<div class="row">
	<div class="columns">
		<label>
			Company
			{{form-input-autocomplete
					api="companies/"
					model=item
					valuePath="company"
					class="with-text-helper"
					selected=item.company}}
					<span class="font-light text-helper">Ignore company suffixes like "Inc., LLP, Limited, Pte Ltd, Pvt, GmbH" etc.</span>
		</label>
	</div>
</div>
<div class="row">
	<div class="columns">
		<label>
			City
			{{form-input-location
					model=item
					valuePath="location"
					placeid=item.placeid
					selected=item.location}}
		</label>
	</div>
</div>
<div class="row">
	<div class="columns medium-8">
		<label>
			Start Date
			{{form-input-date model=item valuePath="startFrom"}}
		</label>
	</div>
</div>
<div class="row">
	<div class="columns medium-8">
		<label>
			End Date
			{{form-input-date model=item valuePath="endAt"}}
		</label>
	</div>
	<div class="columns medium-4">
		<div class="checkbox current-job">
			<label>
				{{input type="checkbox" name="currentCompany" checked=item.currentCompany}} Current Job
			</label>
		</div>

	</div>

</div>
<div class="row">
	<div class="columns">
	</div>
</div>
<div class="row">
	<div class="columns">
		<label>
			Description (Optional)
		</label>
		{{form-text-counter limit=2000 value=item.content rows=10 }}
	</div>
</div>
