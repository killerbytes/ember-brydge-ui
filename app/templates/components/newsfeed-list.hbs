
<div class="row">
  <div class="12-medium column">
    <ul>
      {{#each newsfeed as |post|}}
        <li>
          {{#link-to 'post' post.user.id post.id}}{{post.shortid}}{{/link-to}} - {{post.content}} ({{post.score}}) {{moment-from-now post.updatedAt}}
          <br> by {{#link-to 'profile' post.user}} {{post.user.name}}  {{/link-to}}
        </li>
      {{else}}
        <p>(No records found)</p>
      {{/each}}
    </ul>
  </div>
</div>

{{yield}}
