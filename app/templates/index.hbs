<div class="expanded row">
  <div class="columns large-8 medium-8 main-content">
    <div class="container">
      <div class="row">
        <div class="large-6 medium-8 small-centered columns">
          <div class="dialog-wrapper">
            <div class="dialog-header">
              <a href="/" class="logo"><img src="assets/brydge-blue.svg"></a>
            </div>
            {{#if errors}}
              <div class="error-messages">
                <ul class="no-bullet errors">
                {{#each errors as |item|}}
                    <li>
                      <h4>{{item.title}}</h4>
                      {{item.detail}}
                    </li>
                {{/each}}
                </ul>
              </div>
            {{/if}}
            {{partial "partials/form-login"}}
            <a data-open="video-teaser">Use the Industry Picker</a>
            <div class="dialog-footer">
              <form class="brydge-form">
                <div class="input-group">
                  {{input value=code class="input-group-field" placeholder="Invitation code" }}
                  <div class="input-group-button">
                    <button type="submit" class="button expanded success" {{action "proceed"}}>Sign up</button>
                  </div>
                </div>
              </form>
              <div class="text-center page-title">
                <strong>Want to check it out? Leave us your email {{link-to "here" "register"}}.</strong>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="columns large-4 medium-4 sidebar-content">
    <div class="container">
      {{partial 'partials/public-sidebar'}}
    </div>
  </div>
</div>


{{#zf-reveal id="video-teaser" overlay=true class="small box"}}
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
  <section>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/oPpzJAzdpTU?autoplay=1" frameborder="0" allowfullscreen></iframe>
  </section>

{{/zf-reveal}}
