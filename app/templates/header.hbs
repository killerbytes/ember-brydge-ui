<header class="top-bar" data-sticky data-options="marginTop:0;" style="width:100%">
	<div class="row columns">
		<div class="top-bar-title">{{#link-to 'home'}}<img src="assets/logo.svg">{{/link-to}}</div>
		<div>
			<div class="top-bar-left">

				<ul class="menu menu-links hide">
					<li>{{#link-to 'me'}}Profile{{/link-to}}</li>
					<li>{{#link-to 'home'}}Home{{/link-to}}</li>
				</ul>

				<ul class="top-bar-group menu menu-actions" {{ action "closeTooltip" }}>
					{{top-bar-views}}
					{{top-bar-requests}}
					{{top-bar-messages}}
					<li>
						<a data-toggle="dd-stack">
							{{#zf-tooltip title="Notifications" vOffset=0}}
							<i class="icons stack"></i>
							<i class="divider"></i>						
							{{/zf-tooltip}}
							<div class="wrapper">
								<div class="triangle"></div>
							</div>							
						</a>
						{{#zf-dropdown id="dd-stack" closeOnClick="true"}}
							<ul class="menu">
								<li>{{link-to "Home" "home"}}</li>
							</ul>
							<ul class="menu">
								<li>{{link-to "Profile" "me"}}</li>
								<li>{{link-to "Edit Profile" "me"}}</li>
								
							</ul>
							<ul class="menu">
								<li><a href="">People Search</a></li>									
							</ul>
							<ul class="menu">
								<li><a href="">Settings</a></li>
								<li><a href="">User Guide</a></li>
								<li><a href="" {{action 'logout'}}>Log out</a></li>
								
							</ul>
						{{/zf-dropdown}}
					</li>						
				</ul>


			</div>
			<div class="top-bar-right">
				{{top-bar-search}}
				<ul class="top-bar-group menu menu-actions" {{ action "closeTooltip" }}>	
					<li>
						<a data-toggle="dd-menu">
							{{#zf-tooltip title="Menu" vOffset=0}}
								<i class="divider"></i>
								<i class="icons caret"></i>
							{{/zf-tooltip}}
							<div class="wrapper">
								<div class="triangle"></div>
							</div>
						</a>

							{{#zf-dropdown id="dd-menu" closeOnClick="true"}}
								<ul class="menu">
									<li>{{link-to "Home" "home"}}</li>
								</ul>
								<ul class="menu">
									<li>{{link-to "Profile" "me"}}</li>
									<li>{{link-to "Edit Profile" "me.edit" sessionAccount.account.userid}}</li>
									
								</ul>
								<ul class="menu">
									<li><a href="">People Search</a></li>
									<li>{{link-to "Your ASK page" "me.ask"}}</li>
								</ul>
								<ul class="menu">
									<li><a href="">Settings</a></li>
									<li><a href="">User Guide</a></li>
									<li><a href="" {{action 'logout'}}>Log out</a></li>
									
								</ul>

							{{/zf-dropdown}}
						
					</li>
				</ul>

			</div>
		</div>
	</div>
</header>
