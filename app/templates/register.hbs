{{#unless model}}
  <div class="row">
    <div class="medium-6 small-centered columns">
      <div class="dialog-wrapper">
        <div class="page-dialog">
          <a href="/" class="logo"><img src="assets/brydge-blue.svg"></a>
        </div>
        {{#if errors}}
          <div class="error-messages">
            <ul class="no-bullet errors">
            {{#each errors as |item|}}
                <li>
                  <h4>{{item.title}}</h4>
                  {{item.detail}}
                </li>
            {{/each}}
            </ul>
          </div>
        {{/if}}
        {{partial "partials/form-register"}}
      </div>

    </div>
  </div>

{{else}}
  <div class="row">
    <div class="medium-6 small-centered columns">
      <div class="dialog-wrapper">
        <div class="page-dialog">
          <a href="/" class="logo"><img src="assets/brydge-blue.svg"></a>
        </div>
        {{#if errors}}
          <div class="error-messages">
            <ul class="no-bullet errors">
            {{#each errors as |item|}}
                <li>
                  <h4>{{item.title}}</h4>
                  {{item.detail}}
                </li>
            {{/each}}
            </ul>
          </div>
        {{/if}}
        {{partial "partials/form-request-invite"}}
      </div>

    </div>
  </div>
{{/unless}}
