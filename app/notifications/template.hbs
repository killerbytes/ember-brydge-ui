<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="page-heading">
      <h1>Notifications</h1>
      <p class="text-center">
        Get updates on your interaction with connections and users who interact with your post.
      </p>
    </div>

  </div>
</div>

<div class="row">
  <div class="large-7 medium-7 columns">
    <div class="box">
      <ul class="media-list user">
        {{#each model as |item|}}
          <li>
            <a {{action "select" item}} class="plain {{if item.read false 'new-notification'}}">
              <div class="row columns collapse">
                <div class="columns">
                  <div class="avatar" style={{htmlSafeImage item.target.profile.avatarUrl }}>
                    <img src= {{item.target.profile.avatarUrl}} class="hide">
                  </div>
                  <div class="user-info">
                    <div>
                      <strong>{{item.target.profile.firstName }} {{item.target.profile.lastName }}</strong> {{{notification-text item}}}
                    </div>
                    <span class="timestamp">{{ timestamp item.createdAt }}</span>
                  </div>
                </div>
              </div>
            </a>
          </li>
        {{else}}
          <section>
            <div class="empty-message">No new notifications</div>
          </section>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="large-5 medium-5 columns sidebar">
    {{ partial 'partials/user-guide-box' }}
    {{ partial "footer"}}

  </div>
</div>
