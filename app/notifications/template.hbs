<div class="row">
	<div class="columns">
		<div class="top-banner bg-gray box">
			<h1>NOTIFICATIONS</h1>
		</div>		
	</div>
</div>


<div class="row">
  <div class="medium-7 columns">
  	<div class="box rounded">
      <div class="padding">
        <strong>NOTIFICATIONS FROM THE LAST FEW  DAYS</strong>
      </div>
      <ul class="media-list notifications-list no-bullet list-lined">
      {{#each model as |item|}}
        <li>
          <div class="media-object">
            <div class="media-object-section">
              <div class="thumbnail">
                <img src={{item.profile.avatarUrl}}>
              </div>
            </div>
            <div class="media-object-section main-section">
              {{#if (notification-type 'ask' item.type)}}
                <p><a>{{item.profile.firstName}} {{item.profile.lastName}}</a> asked you a question <a>{{ item.content}}</a></p>
                <span>{{ postDateFormat item.createdAt }}</span>
              {{/if}}
              {{#if (notification-type 'post' item.type)}}
                <p><a>{{item.profile.firstName}} {{item.profile.lastName}}</a> shared your post <a>{{ item.content}}</a></p>
                <span>{{ postDateFormat item.createdAt }}</span>
              {{/if}}

            </div>
          </div>
        </li>
      {{/each}}
      </ul>
  		
  	</div>

  </div>    
  <div class="medium-5 columns sidebar">

    {{render "progress-box"}}
    {{render "footer"}}
  </div>
</div>
