<div class="row">
	<div class="columns">
		<div class="top-banner bg-gray box">
			<h1>PENDING QUESTIONS</h1>
		</div>		
	</div>
</div>


<div class="row">
  <div class="medium-7 columns">
  	<div class="box rounded">
      <div class="padding">
        <strong class="text-upper">PENDING QUESTIONS FOR {{username}}</strong>
      </div>

      <ul class="no-bullet question-pending-list">
      {{#each toQuestions as |item|}}
        {{#unless item.answer}}
        <li>
          <p class="title">{{item.content}}</p>
          <div class="mb5 text-light">asked by {{link-to item.from.content.name "profile" item.from.content.username class="user" }}</div>
          <p class="timestamp text-light">{{postDateFormat item.createdAt}}</p>     

          <div class="question-box-footer">
            <ul class="menu menu-dotted">
              <li><a {{action "selectItem" q }} class="float-left" data-open="answerFormModal">Write Answer</a></li>
              <li><a class="float-right">Delete</a></li>
              <li><a class="float-right">Flag</a></li>
            </ul>                       
          </div>      
        </li>
        {{/unless}}
      {{/each}}
      </ul>
  		
  	</div>

  </div>    
  <div class="medium-5 columns sidebar">

    {{render "progress-box"}}
    {{render "footer"}}
  </div>
</div>
