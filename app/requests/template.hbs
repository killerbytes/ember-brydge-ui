<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="page-heading">
      <h1>Pending Connection Requests</h1>
      <p class="text-center">
        These users want to connect! Accept if you know them, or head over to their profile to see if they can be relevant professional acquaintances.
      </p>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-7 medium-7 columns">
    <div class="box">
      <ul class="media-list user">
        {{#each requests as |item|}}
        <li>
          <div class="padding {{if item.read false 'new-notification'}}">
            <div class="row collapse">
              <div class="columns medium-8">
                {{#link-to "profile" item.userid}}
                <div class="avatar" style={{htmlSafeImage item.avatar }}>
                  <img src= {{item.avatar}} class="hide">
                </div>
                {{/link-to}}
                <div class="user-info">
                  {{link-to item.fullName "profile" item.userid }}
                  <div class="position">{{item.currentTitle}} at {{item.currentCompany}}</div>
                </div>

              </div>
              <div class="columns medium-4 actions text-right">
                <a {{action "accept" item }} class="button button-clear"><i class="fa fa-check-circle-o" aria-hidden="true"></i></a>
                <a {{action "reject" item }} class="button button-clear"><i class="fa fa-times-circle-o" aria-hidden="true"></i></a>
              </div>
            </div>
          </div>
        </li>
        {{else}}
          <section>
            <div class="empty-message">No pending connection requests</div>
          </section>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="large-5 medium-5 columns sidebar">
    {{ partial 'partials/user-guide-box' }}
    {{ partial "footer"}}
  </div>
</div>
