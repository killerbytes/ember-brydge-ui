<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="page-heading">
      <h1>Profile Views</h1>
      <p class="text-center">
        You can turn this ON or OFF in <a href="{{href-to 'settings' (query-params tab='views')}}">Settings</a>.
      </p>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-7 medium-7 columns">
    <div class="box">
      <ul class="media-list user">
        {{#each list as |item|}}
          <li>
            <div {{action "selectView" item}} class="padding {{if item.read false 'new-notification'}}">
              <div class="row collapse">
                <div class="columns">
                  <a href="{{href-to 'profile' item.target.profile.uid}}" class="name">
                    <div class="avatar" style={{htmlSafeImage item.target.profile.avatarUrl }}>
                      <img src= {{item.target.profile.avatarUrl}} class="hide">
                    </div>
                  </a>
                  <div class="user-info">
                    <a href="{{href-to 'profile' item.target.profile.uid}}" class="text-title">{{item.target.profile.fullName}}</a> viewed your profile
                    <div class="timestamp">{{ timestamp-views item.createdAt }}</div>
                  </div>
                </div>
              </div>
            </div>
          </li>
        {{else}}
          <section>
            <div class="empty-message">No recent profile views</div>
          </section>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="large-5 medium-5 columns sidebar">
    {{ partial 'partials/user-guide-box' }}
    {{ partial "footer"}}
  </div>
</div>
