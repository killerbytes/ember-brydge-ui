<div class="row">
	<div class="columns">
		<div class="top-banner bg-gray box">
			<h1>PENDING COMPLIMENT REQUESTS</h1>
		</div>		
	</div>
</div>


<div class="row">
  <div class="medium-7 columns">
  	<div class="box rounded">
      <div class="padding">
        <strong class="text-upper">PENDING COMPLIMENT REQUESTS FOR {{ sessionAccount.account.profile.firstName }}</strong>
      </div>
      <ul class="media-list no-bullet">
        {{#each requests as |item|}}
        <li>
          <div class="media-object">
            <div class="media-object-section">
              <div class="thumbnail">
                <img src= "{{item.from.profile.avatarUrl}}">
              </div>
            </div>
            <div class="media-object-section main-section">
              {{link-to item.from.name 'profile' item.from.username class="name"}}
              <div class="position">
                <div>{{item.from.profile.currentTitle}}</div>
                <div>{{item.from.profile.currentCompany}}</div>
                <div>{{item.content}}</div>
              </div>
            </div>
            <div class="media-object-section actions-section">
              <a class="button expanded success" {{action "accept" item.id }}>ACCEPT</a>
              <a class="button expanded default" {{action "reject" item.id }}>REJECT</a>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>

  	</div>

  </div>    
  <div class="medium-5 columns sidebar">

    {{render "progress-box"}}
    {{render "footer"}}
  </div>
</div>
