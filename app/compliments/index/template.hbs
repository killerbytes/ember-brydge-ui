<div class="row">
  <div class="medium-5 columns sidebar">
    {{profile-box profile=model.profile class="mb20"}}
    {{partial 'partials/profile-sidebar'}}

  </div>

  <div class="medium-7 columns">
    {{profile-menu profile=profile}}

    {{#if isOwner }}
      <div class="page-heading">      
        <h1>Your Compliments Page</h1>
      </div>
    {{else}}
      <form {{action 'submit' on='submit'}} class="box user-top-form">
        <section>
          {{select-native content=titles action=(action (mut formComplimentTitle))}}

          {{form-text-counter limit=250 value=complimentContent rows=5 class="mb"}}

          <div class="row">
            <div class="columns medium-8">{{link-to "See Tips" "user-guide"}}</div>
            <div class="columns medium-4">
              <button class="button btn success expanded {{if flagCompliment 'disabled'}}" type="submit">Compliment</button>
            </div>
          </div>
        </section>
      </form>      
    {{/if}}

    <form>
      <div class="row collapse">
        <div class="small-8 columns">
          <label for="right-label" class="text-right middle">Filter compliments by&nbsp;&nbsp;</label>
        </div>
        <div class="small-4 columns">
        {{select-native content=complimentTitles action=(action (mut complimentTitle)) }}
        </div>
      </div>
    </form>

    {{#each list as |item|}}
    <div class="box">
      <section class="compliment-card">
        <div class="row user">
          <div class="columns medium-8">
            <div class="avatar" style={{htmlSafeImage item.from.profile.avatarUrl}}>
              <img src="{{item.from.profile.avatarUrl}}" class="hide">
            </div>
            <div class="user-info">
              {{link-to item.from.name "profile" item.from.id}} complimented {{link-to item.to.name "profile" item.to.id}}              
            </div>            
          </div>
          <div class="columns medium-4 text-right">
            <div class="timestamp">{{timestamp item.createdAt}}</div>                          
          </div>
        </div>
        <div class="content-pad">
          <div class="title">{{item.title}}</div>
          <p class="content">{{item.content}}</p>
        </div>
      </section>
    </div>
    {{/each}}
  </div>
</div>