<section class="content-title">
  <h4>Industry Picker</h4>	
  <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
    <span aria-hidden="true">&times;</span>
  </button>
  
</section>
  
{{#zf-tabs class="hide" id=(concat "industry-tab-" name)}}
  <li class="tabs-title is-active"><a href="#{{name}}-root">Root</a></li>
  {{#each categories as |item|}}
      <li class="tabs-title"><a href="#{{name}}-{{item.code}}">{{item.name}}</a></li>
      {{#each item.categories as |category|}}
        <li class="tabs-title"><a href="#{{name}}-{{category.code}}">{{category.name}}</a></li>
      {{/each}}
  {{/each}}  
  <li class="tabs-title"><a href="#{{name}}-done">Done</a></li>
{{/zf-tabs}}

<div data-tabs-content="industry-tab-{{name}}">
  <div class="tabs-panel is-active bg-gray" id="{{name}}-root">
  	<section>
		  What sector is you industry in?
      <ul class="no-bullet text-title">
        {{#each categories as |item|}}
          <li><a {{action "goto" "1" item }}>{{item.name}}</a></li>
        {{/each}}
      </ul>
    </section>
  </div>

  <form action="">
    {{#each categories as |item|}}
      <div class="tabs-panel" id="{{name}}-{{item.code}}">
        <section class="content-title text-title">
      		<label>Sector:</label> <strong>{{item.name}}</strong> &nbsp;&nbsp;<a {{action "goto" "0" "root" }}>Change</a>
        </section>
        <section class="content">
        	Choose an Industry Group
          <ul class="no-bullet text-title">
          {{#each item.categories as |item|}}
            <li><a {{action "goto" "2" item }}>{{item.name}}</a></li>
          {{/each}}
          </ul>
        </section>
      </div>

      {{#each item.categories as |category|}}
        <div class="tabs-panel" id="{{name}}-{{category.code}}">
        	<section class="content-title text-title">
          	<label>Sector:</label> <strong>{{item.name}}</strong> <a {{action "goto" "0" "root" }}>Change</a>
          </section>
          <section class="content-title text-title">
        		<label>Industry Group:</label> <strong>{{category.name}}</strong> <a {{action "goto" "1" item }}>Change</a>
          </section>
          <section class="content">
          	Choose an Industry
            <ul class="no-bullet">
            {{#each category.industries as |industry|}}
              <li>
								<a {{action "select" industry }}>{{industry.data.subIndustry}}</a>
                {{industry.checked}}
              </li>
            {{/each}}
            </ul>
          </section>
        </div>

      {{/each}}
    {{/each}}
  </form>

  <div class="tabs-panel" id="{{name}}-done">
  	<form>
    	<section class="content-title text-title">
      	<label>Sector:</label> <strong>{{sector.name}}</strong> <a {{action "goto" "0" "root" }}>Change</a>
      </section>
      <section class="content-title text-title">
    		<label>Industry Group:</label> <strong>{{group.name}}</strong> <a {{action "goto" "1" sector }}>Change</a>
      </section>
      <section class="content-title text-title">
    		<label>Industry:</label> <strong>{{industry.data.subIndustry}}</strong> <a {{action "goto" "2" group }}>Change</a>
      </section>
    	<section>
		    <button class="button success rounded" {{action "select" industry }}>Save Changes</button>
      </section>
    </form>
  </div>
</div>

{{#if selected}}
<section class="row content-footer wrapper">
  <div class="columns medium-8">
    <h4>Industry Tags</h4>
    {{#each selected as |item|}}
      <span class="label label-item"><a {{action "remove" item 'keywords' 'key'}}>{{fa-icon "close"}}</a> {{item.name}}</span>
    {{/each}}
  </div>
  <div class="column medium-4">
    <button class="button success rounded" {{action "submit"}}>Done</button>
  </div>
</section>
{{/if}}