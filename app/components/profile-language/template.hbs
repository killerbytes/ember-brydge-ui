{{#zf-accordion allowAllClosed="true"}}

{{#each items as |item|}}
	<li class="accordion-item" data-accordion-item >
			<a class="accordion-header">
				{{ item.name }} <br>
				<strong>{{ item.proficiency }}</strong>
			</a>
		<div class="accordion-content" data-tab-content>
	  	<form action="" class="form-accordion	">
				<label>
					{{form-input model=item valuePath='name' placeholder="Name"}}					
				</label>
				<label>
        	{{dropdown-proficiency-filter items=languageProficiency model=item.proficiency template="partials/proficiency-filter"}}
				</label>
	  	
			    <button class='button success' disabled={{v-get item 'isInvalid'}} {{ action 'update' item }}>SAVE</button>
			    <button class='button success float-right' {{ action 'delete' item }}>DELETE</button>
			</form>								

		</div>
	</li>
{{/each}}
	<li class="accordion-item" data-accordion-item>
		<div class="accordion-content" data-tab-content>
	  	<form action="" class="form-accordion">
				<label>
					{{form-input model=this valuePath='name' placeholder="Name"}}
				</label>

				<label>
        	{{dropdown-proficiency-filter items=languageProficiency model=proficiency template="partials/proficiency-filter"}}

				</label>
			    <button class='button success' disabled={{v-get this 'isInvalid'}} {{ action 'create' }}>SAVE</button>
			</form>								
		</div>
  		<a class="more no-arrow button success expanded">{{fa-icon "plus"}}</a>
	</li>	  
{{/zf-accordion}}
