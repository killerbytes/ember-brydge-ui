{{#zf-reveal id="shareModal" overlay=true class="reveal-popup newsfeed-item"}}
  <h4>Share this content</h4>
  <form action="">
    <div class="content">
      {{textarea 
        value=value 
        key-up="edit" 
        enter="comment"
        class="textarea content-editable" 
        placeholder="Would you like to say something about this?" }}  

      {{#unless post.sharedPost}}
        <p>{{{post.content}}}</p>
        {{#if post.title}}
          <div class="media-main">
            {{#if post.image}}
            <div class="post-image">
              <a href="{{post.url}}">
                <img src="{{post.image}}">
              </a>
            </div>
            {{/if}}
            <div class="post-caption">
              <h3><a href="{{post.url}}">{{title}}</a></h3>
              {{#if post.siteName}}
                <div class="subheader"><a href="{{post.url}}">{{post.siteName}}</a></div>
              {{/if}}
            </div>
          </div>
        {{/if}}
      {{else}}
        <p>{{{post.sharedPost.content.content}}}</p>
        {{#if post.sharedPost.title}}
          <div class="media-main">
            {{#if post.sharedPost.image}}
            <div class="post-image">
              <a href="{{post.sharedPost.url}}">
                <img src="{{post.sharedPost.image}}">
              </a>
            </div>
            {{/if}}
            <div class="post-caption">
              <h3><a href="{{post.sharedPost.url}}">{{sharedTitle}}</a></h3>
              {{#if post.sharedPost.siteName}}
                <div class="subheader"><a href="{{post.sharedPost.url}}">{{post.sharedPost.siteName}}</a></div>
              {{/if}}
            </div>
          </div>
        {{/if}}

      {{/unless}}

    </div>
    <div class="reveal-footer">
      {{#if sharePost.categories }}
        <div class="broadcast-list">Broadcasting to: My Connections{{#each sharePost.categories as |item|}}
            {{~ concat '; ' item.text ~}}
          {{/each}}
        </div>
      {{else}}
        <div class="broadcast-list">Broadcasting to: My Connections Only</div>
      {{/if}}
      <div class="content text-right">

        <div class="button-wrapper text-left">
          <a class="button dropdown-button" data-toggle="dd-select-channel-post-sharer">
            Select Channel
            <i class="icons caret"></i>
          </a>
          {{#zf-dropdown id="dd-select-channel-post-sharer" closeOnClick=true}}
            {{partial 'partials/select-channel-menu'}}
          {{/zf-dropdown}}
        </div>

        <button {{action "sharePost" }} class="button success">Share</button>
        <a class="button success" data-close>Cancel</a>
      </div>
    </div>
  </form>
{{/zf-reveal}}


