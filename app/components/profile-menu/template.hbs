
<div class="profile-menu-buttons row collapse">
  <div class="column medium-11 small-11">
    <div class="expanded button-group">
      {{#if isOwner}}
        {{link-to "Broadcasts" "me" class=(active-tab '0' index "button")}}
        {{link-to "Background" "me.background" class=(active-tab '1' index "button")}}
        {{link-to "Ask" "me.ask" class=(active-tab '2' index "button")}}
      {{else}}
        {{link-to "Broadcasts" "profile" profile.uid class=(active-tab '0' index "button")}}
        {{link-to "Background" "background" profile.uid class=(active-tab '1' index "button")}}
        {{link-to "Ask" "ask" profile.uid class=(active-tab '2' index "button")}}
      {{/if}}
    </div>
  </div>
  <div class="column medium-1 small-1 wrapper">
    <a class="button menu dropdown-button-arrow button-ellipsis" data-toggle="dd-public-options"></a>
  </div>
</div>
<div class="row columns wrapper">
  {{#zf-dropdown id="dd-public-options" class="dropdown-menu" closeOnClick=true}}
    <ul class="menu">
      {{#if isOwner}}
        <li>{{#link-to "me.following"}} Following ({{ count }}) {{/link-to}}</li>
        <li>{{#link-to "me.followers"}} Followers ({{ count }}) {{/link-to}}</li>
        <li>{{link-to "Edit Profile" "me.edit"}}</li>
        <li>
          <a data-open="dialog-share-profile">Share your profile</a>
        </li>
      {{else}}
        <li>{{#link-to "connections" profile.id }} <span class="text-title">{{profile.firstName}}</span>'s connection ({{ count }}){{/link-to}}</li>
        <li>{{#link-to "following" profile.publicProfile }} Following ({{ count }}){{/link-to}}</li>
        <li>{{#link-to "followers" profile.publicProfile }} Follower ({{ count }}){{/link-to}}</li>
        {{#if isConnected }}
          <li>
              <a class="warning" data-open={{concat 'dialog-box-' 'disconnect-' profile.id}}>Disconnect from <span class="text-title">{{profile.firstName}}</span></a>
          </li>
        {{/if}}
      {{/if}}
    </ul>
  {{/zf-dropdown}}
</div>

{{dialog-box name="disconnect" item=profile title="Disconnect from connection" content="Are you sure you want to disconnect?" submit="disconnect"}}
{{dialog-share-profile profile=profile}}
