{{#zf-accordion id="channelPicker" allowAllClosed=true}}
  <li class="accordion-item" data-accordion-item>
    <a class="accordion-title">{{selectedText}}</a>
    <div class="accordion-content" data-tab-content>
			<div class="boxz">
				<section class="accordion-sub-title">Select a Channel</section>
				<div class="row collapse">
					<div class="columns medium-6">
						<section>
							<div class="sub-title">Your Network</div>
							<ul class="no-bullet content-pad">
								<li {{action "select" 0}}><a>My Connections</a></li>
								<li><label>{{myCompany.text}}</label></li>
							</ul>
						</section>
						<section>
							<div class="sub-title">Your Business Industry ({{#link-to 'me.edit' (query-params tab="industry")}}Edit{{/link-to}})</div>
							<ul class="no-bullet content-pad">
								<li {{action "select" profile.industryOneId profile.industryOneName }}><a>{{profile.industryOneName}}</a></li>
							</ul>
						</section>
						
						<section>
							<div class="sub-title">Your Occupational Industry ({{#link-to 'me.edit' (query-params tab="occupindustry")}}Edit{{/link-to}})</div>
							<ul class="no-bullet content-pad">
							{{#each industries as |item|}}
								<li {{action "select" item.id item.text }}><a>{{item.text}}</a></li>
							{{/each}}
							</ul>
						</section>
						
					</div>
					<div class="columns medium-6">
						<section>
							<div class="sub-title">Industry Channels you follow</div>
							<ul class="no-bullet content-pad">
								<li><a>Consumer Web & Mobile</a></li>
								<li><a>Enterprise Software & Technology</a></li>
								<li><a>Broadcast Media</a></li>
							</ul>
							<a class="button success rounded" data-open="industryModal">Add More</a>
						</section>
					</div>
				</div>
			</div>
    </div>
  </li>
{{/zf-accordion}}

{{#zf-reveal id="industryModal" overlay=true class="small industry-picker box"}}
  {{picker-industry-multi name="search" categories=categories selected=(readonly industries) onSelect="onIndustrySelect" }} 
{{/zf-reveal}}
