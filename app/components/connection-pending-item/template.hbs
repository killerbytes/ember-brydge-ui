<div class="media-object">
  <div class="media-object-section">
    <div class="thumbnail flat" style="background-image: url({{model.from.profile.avatarUrl}})">
      <img src= {{model.from.profile.avatarUrl}} class="hide">
    </div>
  </div>
  <div class="media-object-section media-object-content">
    <div class="title">{{link-to model.from.name 'profile' model.from.username}}</div>        
    <div class="position">
     {{model.from.profile.currentTitle}} <br>
     {{model.from.profile.currentCompany}}
    </div>
  </div>
</div>
<div class="question-box-footer">
	<a {{action "select" model}} class="float-left" data-open="acceptFormModal">Accept</a>
	<a {{action "select" model}} class="float-right" data-open="rejectFormModal">Reject Request</a>
</div>