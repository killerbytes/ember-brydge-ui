<section>
	<label class="title">Academia</label>
	{{#zf-accordion allowAllClosed="true" class="brydge-accordion"}}
		<li class="accordion-item" data-accordion-item>
			<a class="button success expanded rounded">Add Academia</a>
			<div class="accordion-content" data-tab-content>
				<div class="content form-new">
					{{partial "partials/form-academia"}}
					<div class="row">
						<div class="columns">
							{{form-input-button item=item submit="create" placeholder="Saved"}}
						</div>
					</div>
				</div>
			</div>
		</li>
	{{#each list as |item|}}
		<li class="accordion-item box" data-accordion-item >
				<a class="accordion-header">
					<div class="name">{{ item.degree }}</div>
					<div class="company">{{ item.school }}</div>
					<div class="timestamp">Class of {{term-date-format item.endAt 'YYYY' }}</div>
				</a>
			<div class="accordion-content" data-tab-content>
				<div class="content">
					{{partial "partials/form-academia"}}
						<div class="row">
							<div class="columns">
								{{form-input-button item=item submit="update" placeholder="Saved"}}
						    <a class="button button-clear float-right" data-open={{concat 'dialog-box-' 'delete' item.id}}>Delete</a>
							</div>
						</div>
				</div>

			</div>
			{{dialog-box name="delete" item=item title="Delete Academia" content="Are you sure you want to delete this Academia?" submit="delete"}}
		</li>
	{{/each}}
	{{/zf-accordion}}
</section>
