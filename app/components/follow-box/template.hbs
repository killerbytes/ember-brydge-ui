<div class="row">
  <div class="columns medium-10">
    <div class="user section-main">
      <div class="avatar float-left" style={{htmlSafeImage user.profile.avatarUrl}}>
        <img src= {{user.profile.avatarUrl}} class="hide">
      </div>
      <div class="user-info">
        {{link-to user.profile.fullName "profile" user.profile.uid class="text-title"}}
        <div class="position">{{user.profile.career}}</div>
        <div class="position">{{user.profile.location}}</div>
      </div>
    </div>
  </div>
  <div class="columns medium-2">
    <section>
      {{#if isFollowing}}
        <button class="button expanded bordered" {{action "unfollow"}}>Unfollow</button>
      {{else}}
        <button class="button expanded bordered green" {{action "follow"}}>Follow</button>
      {{/if}}
    </section>
  </div>
</div>
