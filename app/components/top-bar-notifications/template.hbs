<a data-toggle="dd-notification">
	{{#zf-tooltip title="Notifications" vOffset=0}}
		<span class="alert badge">{{notification.notifications.length}}</span>
		<i class="icons stack"></i>
	{{/zf-tooltip}}
	<div class="wrapper">
		<div class="triangle"></div>
	</div>							
</a>
{{#zf-dropdown id="dd-notification" class="dropdown-topbar" closeOnClick=true}}

  <ul class="media-list notifications-list no-bullet list-lined">
  {{#each notification.notifications as |item|}}
    <li>
      <div class="media-object">
        <div class="media-object-section">
          <div class="thumbnail">
            <img src={{item.target.profile.avatarUrl}}>
          </div>
        </div>
        <div class="media-object-section main-section">
          {{#if (notification-type 'ask' item.type)}}
            <p><strong>{{item.target.profile.firstName}} {{item.target.profile.lastName}}</strong> asked you a question <strong>{{ item.content}}</strong></p>
            <span>{{ postDateFormat item.createdAt }}</span>
          {{/if}}
          {{#if (notification-type 'comment' item.type)}}
            <p><strong>{{item.target.profile.firstName}} {{item.target.profile.lastName}}</strong> commented your post <strong>{{ item.content}}</strong></p>
            <span>{{ postDateFormat item.createdAt }}</span>
          {{/if}}
          {{#if (notification-type 'vote' item.type)}}
            <p><strong>{{item.target.profile.firstName}} {{item.target.profile.lastName}}</strong> voted your post <strong>{{ item.content}}</strong></p>
            <span>{{ postDateFormat item.createdAt }}</span>
          {{/if}}
          {{#if (notification-type 'compliment' item.type)}}
            <p><strong>{{item.target.profile.firstName}} {{item.target.profile.lastName}}</strong> complimented your post <strong>{{ item.content}}</strong></p>
            <span>{{ postDateFormat item.createdAt }}</span>
          {{/if}}
          {{#if (notification-type 'connection' item.type)}}
            <p><strong>{{item.target.profile.firstName}} {{item.target.profile.lastName}}</strong> accepted your request <strong>{{ item.content}}</strong></p>
            <span>{{ postDateFormat item.createdAt }}</span>
          {{/if}}

        </div>
      </div>
    </li>
  {{/each}}
  </ul>



	{{#link-to 'notifications' class="footer-button success button expanded"}}
		SEE ALL NOTIFICATIONS
	{{/link-to}}

{{/zf-dropdown}}


