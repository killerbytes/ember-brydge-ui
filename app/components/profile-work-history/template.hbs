<form class="accordion-form">
	<section class="header">
	  <p>Your current job (title and employer) will be highlighted at the top of your profile. If you are currently self-employed, unemployed, on a sabbatical, or on a break, click here to pick one of the standard titles.</p>
		
			<label for="">Select a Career Status <span>(If you are currently not employed full-time)</span></label> 
				<div class="row">
					<div class="columns medium-7">
							{{select-native content=highlightStatuses action=(action (mut highlightStatus)) selectedValue=profile.currentTitle}}		
					</div>
					<div class="columns medium-5">
						<label for="highlightStatus" class="forRadio middle">
							{{action-radio id='highlightStatus' value="isHighlightStatus" htmlChecked=profile.customTitle name="highlight" action="onHighlight"}}
							Use this as Title
						</label>		
					</div>
				</div>
	</section>
	<section>
	{{#zf-accordion allowAllClosed="true"}}
	{{#each items as |item|}}
		<li class="accordion-item box	" data-accordion-item >

			<a class="col">
					<div class="name">{{ item.title }}</div>
					<div class="company">{{ item.company }}</div>
					<div class="timestamp">
			      {{term-date-format item.from}} - 
			      {{#if item.currentCompany}}
			        Present
			      {{else}}
			        {{term-date-format item.to}}
			      {{/if}}
		      </div>
			</a>
			<div class="col">
				<label for="{{item.id}}" class="forRadio">
					{{action-radio id=item.id name="highlight" value=item.id htmlChecked=item.showHighlight action="onHighlight" param=item}}
					Use this as Title
				</label>
			</div>
			<div class="accordion-content" data-tab-content>
		  	<div class="content">
		  		{{form-work-history model=item}}
					<div class="row">
						<div class="columns">
					    <button class="button success rounded" disabled={{v-get item 'isInvalid'}} {{ action 'update' item }}>Save</button>
					    <a class="float-right button clear" {{ action 'delete' item }}>Delete this Position</a>						
						</div>
					</div>
				</div>								
			</div>
		</li>
	{{/each}}
		<li class="accordion-item" data-accordion-item>
  		<a class="button success expanded rounded">Add Job Position</a>
			<div class="accordion-content" data-tab-content>
	  		<div class="content form-new">
		  		{{form-work-history model=model}}
					<div class="row">
						<div class="columns">
				    	<button class="button success rounded" disabled={{v-get model 'isInvalid'}} {{ action 'create' }}>Save</button>
					    <a class="float-right button clear">Reset</a>
						</div>
					</div>
				</div>
			</div>
		</li>  
	{{/zf-accordion}}
	</section>
</form>
