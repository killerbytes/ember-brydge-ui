<a data-toggle={{name}} class="button large expanded">ASK
  <div class="wrapper">
    <div class="triangle triangle-gray"></div>
  </div>
</a>

{{#zf-dropdown id=name class="dd-ask-form dropdown-gray" closeOnClick=true}}
  <form {{action 'ask' on='submit'}}>

    <section class="padding ask-form">
      {{#if model.settings.ask }}
        {{#if from.settings.ask }}
          {{textarea value=question rows="3"}}
          <div class="row">
            <div class="columns text-right">
              <button class="button success" type="submit">ASK</button>            
            </div>
          </div>
          <p class="dim-text">
            Ask anyone a professional question. <br>
            If answered, it will appear on both profiles.
          </p>
          <small>{{link-to "Tips on how to use ASK" "user-guide"}}</small>
        {{else}}
          You have turned ASK off
          {{link-to "Settings" "settings" (query-params tab="ask") }}        
        {{/if}}
      {{else}}

        {{model.firstName }} has turned ASK off
      {{/if}}

    </section>
       
  </form>
{{/zf-dropdown}}



