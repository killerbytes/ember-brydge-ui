{{input type=type name=valuePath key-up="query" value=value placeholder=placeholder autocomplete="off"}}
{{#unless isOpen}}
  {{#if showMessage}}
    <div class="error">
        {{v-get model valuePath 'message'}}
    </div>
  {{/if}}
{{/unless}}
{{#if isOpen}}
  <div class="wrapper ">
  	<ul class="no-bullet">
      {{#if isLoading}}
        <li><div class="brydge-loading"></div></li>
      {{/if}}
  	{{#each items as |item|}}
  		<li {{action "onSelect" item}}> <a>{{location-join item}}</a> </li>
  	{{/each}}
  	</ul>
  </div>
{{/if}}
