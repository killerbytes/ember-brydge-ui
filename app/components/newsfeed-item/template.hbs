<section class="user">
  <div class="row">
    <div class="columns medium-8">
      <div class="avatar" style={{htmlSafeImage post.user.profile.avatarUrl }}>
        <img src= {{post.user.profile.avatarUrl}} class="hide">
      </div>
      <div class="user-info">
        <div class="name">
          {{#link-to "profile" post.user.id class="plain"}} 
            {{post.user.name}}
          {{/link-to}}
          {{#if post.sharedPost}}
            {{#unless shared}}
              <span class="dim-text">shared a post</span>
            {{/unless}}
          {{/if}}
        </div>
        <div class="position">{{post.user.profile.currentTitle}} at {{post.user.profile.currentCompany}}</div>
      </div>
    </div>
    <div class="columns medium-4 text-right">
      {{#unless shared }}
        <a data-toggle="dd-post-menu-{{post.id}}" class="action-button"><i class="icons ellipsis"></i></a>      
        {{#zf-dropdown id=(concat "dd-post-menu-" post.id) closeOnClick=true class="card-menu-dropdown"}}
          <ul class="menu">
            <li><a href="">Delete Post</a></li>
            <li><a href="">{{post.id}}</a></li>
          </ul>
        {{/zf-dropdown}}
      {{/unless}}
      {{#link-to 'post' post.user.id post.id class="timestamp"}}{{timestamp post.updatedAt}}{{/link-to}}
      
    </div>
  </div>
</section>

<section>
  <div class="content">
    {{#unless shared }}
      <p>{{{ post.content }}}</p>
    {{else}}
      <p>{{{post.content.content }}}</p>
    {{/unless}}
  </div>

  {{#if post.title}}
    <div class="box no-shadow">
      {{#if post.image}}
        <a href="{{post.url}}">
          <div class="post-image" style={{htmlSafeImage post.image }}>
            <img src="{{post.image}}" class="hide">
          </div>
        </a>
      {{/if}}
      <div class="post-content">
        <div class="title"><a href="{{post.url}}">{{title}}</a></div>
        {{#if post.siteName}}
          <a href="{{post.url}}">{{post.siteName}}</a>
        {{/if}}
      </div>
    </div>
  {{/if}}

  {{#unless shared }}
    {{#if post.sharedPost }}
      {{newsfeed-item post=post.sharedPost shared=true class="shared-post"}}
    {{/if}}
  {{/unless}}

  {{#unless shared }}
    <div class="row post-actions">
      <div class="columns medium-6"> 
       
        {{#if post.vote.upVoted}}
        <a {{action "vote" "reset"}}><span class="acted">Upvoted</span></a> 
        {{else}}
        <a {{action "vote" "up"}}>Upvote</a> 
        {{/if}}

         <span>{{post.vote.upVotes}}</span>


        {{#if post.vote.downVoted}}
        <a {{action "vote" "reset"}}><span class="acted">Downvoted</span></a> 
        {{else}}
          {{#zf-tooltip title="Downvoting is anonymous" vOffset=0 class="top"}}
            <a {{action "vote" "down"}}>Downvote</a> 
          {{/zf-tooltip}}
        {{/if}}

      </div>
      <div class="columns medium-6 text-right">
        <a {{action "viewComments"}}>Comment</a><span>{{post.commentCount}}</span>
        <a {{action "share" post }} data-open="shareModal">Share</a><span>{{post.vote.sharedCount}}</span>
      </div>
    </div>
  {{/unless}}  
</section>

{{#unless shared}}
  <section class="comments">
    {{comment-box post=post total=post.commentCount}}  
  </section>
{{/unless}}