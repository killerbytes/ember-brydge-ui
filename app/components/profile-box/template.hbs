<div class="profile-photo">
  {{image-upload fileLoaded="fileLoaded" logoUrl=profile.avatarUrl}}
</div>
<div class="text-center">
  <div class="name">{{profile.firstName}} {{profile.lastName}}</div>
  {{#if isNotEmptyTitleCompany}}
    <div class="position font-light">{{profile.currentTitle}}</div>
    <div class="company">{{profile.currentCompany}}</div>
  {{else}}
    <div class="empty-message" style="margin:.5rem; ">
      Add Current Title and Company
    </div>
  {{/if}}
  <div class="location mb">
    {{profile.location}}
  </div>
  <div class="text-title">
    {{#unless isOwner }}
      {{#if isConnected }}
        {{#link-to "messages.conversation" profile.connection.conversationid class="button large"}}
          Message {{profile.firstName}}
        {{/link-to}}
      {{else}}
        {{#if isPending}}
          {{#if isSender}}
            Connection Request Sent
          {{else}}
            {{spinning-button clicked="accept" value="Accept Request" class=isDisconnected}}
          {{/if}}
        {{else}}
          {{spinning-button clicked="connect" value="Connect" class=isDisconnected }}
        {{/if}}
      {{/if}}
    {{/unless}}
  </div>
</div>
