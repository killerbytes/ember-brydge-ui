<div class="user section-main">
  <div class="avatar float-left" style={{htmlSafeImage item.avatar}}>
    <img src= {{item.avatar}} class="hide">
  </div>
  <div class="user-info">
    {{#if item.isOwner}}
      {{link-to item.fullName "profile" session.data.authenticated.user_id }}
    {{else}}
      {{link-to item.fullName "profile" item.userid }}
    {{/if}}
    <div class="position">{{item.currentTitle}}</div>
    <div class="position"><strong>{{item.currentCompany}}</strong></div>
    <div class="position">{{item.location}}</div>
  </div>
</div>
{{#if isMe}}
  {{#link-to "messages.conversation" item.conversationid class="button success expanded"}}
    Message
  {{/link-to}}
{{else}}
  <!-- {{item.isOwner}} -->
  {{#unless item.isOwner}}
    {{#if isConnected}}
      {{#link-to "messages.conversation" item.friend.conversationid class="button success expanded"}}
        Message
      {{/link-to}}
    {{else}}
      {{#if isPending}}
        {{link-to "Connection Request Pending" "profile" item.userid class="button bordered expanded button-green"}}
      {{else}}
        <button class="button expanded bordered" {{action "connect"}}>Connect</button>
      {{/if}}

    {{/if}}
  {{/unless}}
{{/if}}
