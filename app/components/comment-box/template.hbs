{{#if showComments}}
  <section class="comment-header">
    {{#if isMore}}
      <span class="dot-after">
      <a class="more no-arrow" {{action 'viewComments'}}>
        View previous comments
      </a>
      </span>
    {{/if}}
    <a class="more no-arrow" {{action 'hideComments'}}>
      Hide comments
    </a>
    {{#if isLoading}}
      <div class="brydge-loading"></div>
    {{/if}}

  </section>
{{/if}}

{{#if showComments}}
  <section class="comment-group">
    {{#each comments as |comment|}}
      <div class="comment-item">
        <div class="user user-small">
          {{avatar-wrap profile=comment.user.profile}}
          <div class="user-info">
            <a href="{{href-to 'profile' comment.user.profile.uid}}" class="name">{{comment.user.profile.fullName}}</a>
            <i class="dot"></i>
            <span class="timestamp">{{timestamp comment.insertedAt}}</span>
            <div class="position">{{ comment.user.profile.career }}</div>
          </div>
        </div>
        <div class="comment">
          {{see-more content=comment.content}}
        </div>
      </div>
    {{/each}}
  </section>
{{/if}}
{{#unless showComments}}
  {{#if isLoading}}
    <section class="comment-group">
      <div class="brydge-loading"></div>
    </section>
  {{/if}}
{{/unless}}

<section class="comments">
  <form>
    {{text-area
      value=commentContent
      key-up="resize"
      enter="comment"
      disabled=notAuthenticated
      class="textarea content-editable"
      placeholder="Write your comment"}}
  </form>
</section>


  {{#if showComments}}
    <section class="comment-footer">
      <a class="more no-arrow" {{action 'hideComments'}}>
        Hide comments
      </a>
    </section>
  {{else}}
    {{#if total}}
      <section class="comment-footer">
        <a class="more no-arrow" {{action 'viewComments'}}>
          View comments
        </a>
      </section>
    {{/if}}
  {{/if}}
