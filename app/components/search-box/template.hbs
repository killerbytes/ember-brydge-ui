<h1 class="strong">
  Find professionals and opinion-makers to follow:
</h1>
<div class="row">
  <div class="columns medium-3 small-12">
    {{input value=name placeholder="Name"}}
  </div>
  <div class="columns medium-3 small-12">
    {{input value=keyword placeholder="Job Title or Expertise"}}
  </div>
  <div class="columns medium-3 small-12">
    {{form-input-location
        model=this
        valuePath="city"
        selected=this.city
        placeholder="City"}}
  </div>
  <div class="columns medium-3 small-12">
    <button class="button success expanded" {{action "submit"}}>Search</button>
  </div>
</div>
