<form {{action 'post' on='submit'}}>
	<div class="box rounded post-form">
	  <div class="post-bar border-b">
	    <div class="thumbnail">
	      <img src= {{profile.avatarUrl}}>
	    </div>
	    
	    <div class="post-form">
	      {{content-editable class="content-editable" value=postContent placeholder='Would you like to say about this?'}}
	    </div>
	    {{#if categories}}
	    	<div class="broadcast-list">Broadcasting to: My Connections
	    		{{#each categories as |item|}}
			    	{{concat ', ' item.text }}
			    {{/each}}
	    	</div>
	    {{else}}
	    	<div class="broadcast-list">Broadcasting to: My Connections Only</div>
	    {{/if}}
	  </div>
	  
	  <div class="actions">
	    <div class="float-right wrapper">
				<a class="button dropdown-button" data-toggle="dd-select-channel">
					Select Channel
					<i class="icons caret"></i>
				</a>
				{{#zf-dropdown id="dd-select-channel" closeOnClick=true}}
					{{partial 'partials/select-channel-menu'}}
				{{/zf-dropdown}}
	      <button class="success button" type="submit">BROADCAST</button>
	    </div>
	  </div>
	</div>
</form>
