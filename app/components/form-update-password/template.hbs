{{#if errors}}
<div class="error-messages">
  <ul class="no-bullet errors">
    {{#each errors as |item|}}
        <li>
          <h4>{{item.title}}</h4>
          {{item.detail}}
        </li>
    {{/each}}
  </ul>
</div>
{{/if}}

<label>Old Password
  {{form-input type="password" model=this valuePath="oldPassword"}}
</label>
<label>New Password
  {{form-input type="password" model=this valuePath="password"}}
</label>
<label>Re-type new password
  {{form-input type="password" model=this valuePath="confirmPassword"}}
</label>
<div class="row">
  <div class="columns">{{form-input-button itemxxx=this submit="update" placeholder="Password has been changed"}}</div>
</div>
