{{#zf-reveal id=(concat "answer-form-" item.id) overlay=true class="small box"}}
  <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
    <span aria-hidden="true">&times;</span>
  </button>
  <section class="title">
    <h4>Write Answer</h4>
  </section>
  <section>
  	<div class="title">{{item.question}}</div>
  </section>
  <section class="header">
    <form class="form-input">
      <div class="avatar circle" style={{htmlSafeImage sessionAccount.account.profile.avatarUrl}}>
        <img src={{sessionAccount.account.profile.avatarUrl}} class="hide">
      </div>
      <div class="input-wrapper">
        {{form-input-textarea
          model=this
          valuePath="answer"
          placeholder="Type answer here"
        }}
      </div>
    </form>
  </section>
  <section>
    <button class="button success rounded" {{action "submit"}} disabled={{v-get this 'isInvalid'}}>Submit</button>    
		<a class="button button-clear float-right" data-close>Cancel</a>
  </section>

{{/zf-reveal}}
