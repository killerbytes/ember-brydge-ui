<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="page-heading">
        <h1>{{link-to profile.firstName "profile" profile.uid class="text-title" }}'s Following</h1>
      <p class="text-center">
        These are the users <span class="text-title">{{ profile.firstName}}</span> is connected to.
      </p>
    </div>
  </div>
</div>
<div class="row">
  <div class="box row columns">
    <section>
      <form>
        {{input value=key type="search" placeholder="Search by Name" class="no-margin"}}
      </form>
    </section>
    <section class="row columns bg-gray user-list">
      {{#each following as |item|}}
        <div class="columns">
          {{follow-box item=item meta=meta onFollow="following"}}
        </div>
      {{/each}}
    </section>
  </div>
</div>
