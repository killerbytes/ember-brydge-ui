<div class="page-heading">      
  <h1>{{profile.firstName}}'s Connections</h1>
  <p class="text-center">
  </p>                    
</div>

<div class="row">
  <div class="mb">
    {{#zf-tabs id="ask-tabs" class="tab-controls"}}
      <li data-tab='tab_1' class="tabs-title is-active">
        <a href="#tab_1" aria-selected="true">All Connections</a>
      </li>
      <li data-tab='tab_2' class="tabs-title">
        <a href="#tab_2">Mutual Connections</a>
      </li>
    {{/zf-tabs}}
  </div>
  <div class="tabs-content" data-tabs-content="ask-tabs">
    <div class="tabs-panel {{active-tab 'tab_1' tab}}" id="tab_1">
      <div class="box row columns">
        <section>
          <form>
            {{input value=key type="search" placeholder="Search by Name" class="no-margin"}}
          </form>
        </section>
        <section class="row medium-up-2 columns bg-gray user-list">
          {{#each connections as |item|}}
            <div class="columns medium-6">
              <div class="box">
                <div class="user section-main">
                  <div class="avatar float-left" style={{htmlSafeImage item.avatarUrl}}>
                    <img src= {{item.from.profile.avatarUrl}} class="hide">
                  </div>
                  <div class="user-info">
                    {{link-to item.name "profile" item.from.id }}
                    <div class="position">{{item.title}}</div>
                    <div class="position"><strong>{{item.company}}</strong></div>
                  </div>
                </div>
                {{#link-to "messages.conversation" item.from.profile.conversationid class="button success expanded"}}
                  Message
                {{/link-to}}    
              </div>
            </div>
          {{/each}}
        </section>    
      </div>
    </div>
    <div class="tabs-panel {{active-tab 'tab_2' tab}}" id="tab_2">
      <div class="box row columns">
        <section>
          <form>
            {{input value=key type="search" placeholder="Search by Name" class="no-margin"}}
          </form>
        </section>
        <section class="row medium-up-2 columns bg-gray user-list">
          {{#each mutual as |item|}}
            <div class="columns medium-6">
              <div class="box">
                <div class="user section-main">
                  <div class="avatar float-left" style={{htmlSafeImage item.avatarUrl}}>
                    <img src= {{item.from.profile.avatarUrl}} class="hide">
                  </div>
                  <div class="user-info">
                    {{link-to item.name "profile" item.from.id }}
                    <div class="position">{{item.title}}</div>
                    <div class="position"><strong>{{item.company}}</strong></div>
                  </div>
                </div>
                {{#link-to "messages.conversation" item.from.profile.conversationid class="button success expanded"}}
                  Message
                {{/link-to}}    
              </div>
            </div>
          {{else}}
            <div class="columns">
              No Mutual Connections
            </div>
          {{/each}}
        </section>    
      </div>
    </div>
  </div>
</div>