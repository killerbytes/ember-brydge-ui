<div class="row">
	<div class="columns">
		<div class="top-banner bg-gray box">
			<h1 class="text-upper">{{profile.firstName}}'s CONNECTIONS</h1>
		</div>		
	</div>
</div>


<div class="row">
  <div class="medium-7 columns">
    <div class="tabs">
      {{#zf-tabs}}
        <li class="medium-6 tabs-title is-active">
          <a href="#question_answered" class="button expanded text-upper" aria-selected="true">All Connections</a>
        </li>
        <li class="medium-6 tabs-title">
          <a href="#question_asked" class="button expanded text-upper">Mutual Connections</a>
        </li>
      {{/zf-tabs}}
      <div class="tabs-content questions" data-tabs-content="example-tabs">
        <div class="tabs-panel is-active" id="question_answered">
          <div class="search-bar">
            <form action="">
              <input type="text" placeholder="Search by Name">
            </form>
          </div>
          <ul class="no-bullet connections-list">
            {{#each list as |connection|}}
            <li>
                <div class="media-object">
                  <div class="media-object-section">
                    <div class="thumbnail">
                      <img src= {{connection.avatarUrl}}>
                    </div>
                  </div>
                  <div class="media-object-section media-object-content">
                    {{#link-to "profile" connection.username class="name"}}  
                      {{connection.name }}
                    {{/link-to}}
                    
                    <div class="position">
                      {{connection.title}} <br>
                      {{connection.company}}
                    </div>
                    <!-- <p class="location">{{connection.from.profile.location}}</p> -->
                  </div>
                </div>
            </li>
            {{/each}}
          </ul>
        </div>
        <div class="tabs-panel" id="question_asked">
          <ul class="no-bullet connections-list">
            {{#each mutual
             as |connection|}}
            <li>
                <div class="media-object">
                  <div class="media-object-section">
                    <div class="thumbnail">
                      <img src= {{connection.avatarUrl}}>
                    </div>
                  </div>
                  <div class="media-object-section media-object-content">
                    {{#link-to "profile" connection.username class="name"}}  
                      {{connection.name }}
                    {{/link-to}}
                    
                    <div class="position">
                      {{connection.title}} <br>
                      {{connection.company}}
                    </div>
                   <!--  <p class="location">{{connection.from.profile.location}}</p> -->
                  </div>
                </div>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>


  </div>    
  <div class="medium-5 columns sidebar">
    {{render "progress-box"}}
    {{render "footer"}}
  </div>
</div>

{{#zf-reveal id="acceptFormModal" overlay=true class="reveal-popup tiny"}}
  {{accept-form selectedAccept=selectedAccept resp='refreshModel' store=store}}
{{/zf-reveal}}

{{#zf-reveal id="rejectFormModal" overlay=true class="reveal-popup tiny"}}
  {{reject-form selectedReject=selectedReject resp='refreshModel' store=store}}
{{/zf-reveal}}
