<div class="row">
  <aside class="columns medium-5 sidebar">
    {{profile-box profile=profile class="mb20"}}

    {{partial 'partials/profile-sidebar'}}
  </aside>

  <div class="columns medium-7">
    {{profile-menu profile=profile}}

    <div class="box tab-background">
      <section class="hoverable">
        <h3><i class="fa fa-paperclip" aria-hidden="true"></i>
          Work History
          {{#if isOwner}}
            {{#link-to "me.edit" (query-params tab="work") class="editable"}}
              <i class="fa fa-pencil-square-o"></i>
            {{/link-to}}
          {{/if}}

        </h3>
      </section>
        <div class="section-group section-accordion-group">
          {{#each experiences as |item|}}
            <section>
              <div class="section-main">
                <div class="title">{{item.title}}</div>
                <strong><a>{{item.company}}</a></strong>
                <div class="text-gray">
                  {{term-date-format item.from}} -
                  {{#if item.currentCompany}}
                    Present ({{time-diff item.from item.to}})
                  {{else}}
                    {{term-date-format item.to}} ({{time-diff item.from item.to}})
                  {{/if}}
                </div>
              </div>
            {{#if item.content}}
              {{#zf-accordion-menu class="section-accordion"}}
                <li>
                  <ul class="section-accordion-content no-bullet">
                    <li class="paragraph">{{{item.content}}}</li>
                  </ul>
                  <a class="more no-arrow"><span class="content-more">Show More</span><span class="content-less">Show Less</span></a>
                </li>
              {{/zf-accordion-menu}}
            {{/if}}
            </section>
          {{/each}}
        </div>
    </div>

    <div class="box">
      <section class="hoverable">
        <h3><i class="fa fa-graduation-cap" aria-hidden="true"></i>
          Academia
          {{#if isOwner}}
            {{#link-to "me.edit" (query-params tab="academia") class="editable"}}
              <i class="fa fa-pencil-square-o"></i>
            {{/link-to}}
          {{/if}}

        </h3>
      </section>
      <div class="section-group section-accordion-group">
      {{#each educations as |item|}}
        <section>
          <div class="section-main">
            <div class="title">{{item.school}}</div>
            <div class="sub-title">{{item.degree}}</div>
            <div class="sub-title">
              Class of {{term-date-format item.endAt 'YYYY'}}
            </div>
          </div>
        </section>
      {{/each}}
      </div>
    </div>

    <div class="box">
      <section class="hoverable">
        <h3><i class="fa fa-globe" aria-hidden="true"></i>
          Languages
          {{#if isOwner}}
            {{#link-to "me.edit" (query-params tab="language") class="editable"}}
              <i class="fa fa-pencil-square-o"></i>
            {{/link-to}}
          {{/if}}

        </h3>
      </section>
      <div class="section-group section-accordion-group">
      <div class="row medium-up-2">
      {{#each languages as |item|}}
        <div class="columns">
          <section>
            <div class="content-pad">
              <div class="title">{{item.name}}</div>
              <div class="sub-title">{{item.proficiency}}</div>
            </div>
          </section>

        </div>
      {{/each}}
      </div>
      </div>
    </div>
  </div>
</div>
