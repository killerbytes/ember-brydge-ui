<div class="row">
	<div class="columns">
		<div class="top-banner bg-gray box">
			<h1>YOUR CONNECTIONS</h1>
		</div>		
	</div>
</div>


<div class="row">
  <div class="medium-7 columns">
  	<div class="box rounded">
  		<div class="search-bar">
  			<form action="">
  				<input type="text" placeholder="Search by Name">
  			</form>
  		</div>

      <ul class="no-bullet connections-list">
        {{#each model.acceptedList as |connection|}}
        <li class="{{if (eq connection.from.id targetid) "highlight"}}">
            <div class="media-object">
              <div class="media-object-section">
                <div class="thumbnail" style="background-image: url({{connection.from.profile.avatarUrl}})">
                  {{#link-to "profile" connection.from.username class="name"}}  
                  <img src= {{connection.from.profile.avatarUrl}} class="hide">
                  {{/link-to}}
                </div>
              </div>
              <div class="media-object-section media-object-content">
                {{#link-to "profile" connection.from.username class="name"}}  
                  {{connection.from.name }}
                {{/link-to}}
                
                <div class="position">
                  {{connection.from.profile.currentTitle}} <br>
                  {{connection.from.profile.currentCompany}}
                </div>
                <p class="location">{{connection.from.profile.location}}</p>
              </div>
            </div>
        </li>
        {{/each}}
      </ul>

  	</div>

  </div>    
  <div class="medium-5 columns sidebar">

    <div class="box rounded pending-request-box">
		<h5 class="box-header">Pending Requests</h5>

    {{#if model.pendingListTop}}

		{{partial 'me/connections/pending'}}
    {{else}}
     <div class="columns">No pending</div>
    {{/if}}
		
    <!-- {{partial 'connections/more-pending'}}   -->  

		<!-- {{#link-to 'me.ask' class="success button expanded" }}
			Load More
		{{/link-to}} -->
    </div>

    {{render "progress-box"}}
    {{render "footer"}}
  </div>
</div>

{{#zf-reveal id="acceptFormModal" overlay=true class="reveal-popup tiny"}}
  {{accept-form selectedAccept=selectedAccept resp='refreshModel' store=store}}
{{/zf-reveal}}

{{#zf-reveal id="rejectFormModal" overlay=true class="reveal-popup tiny"}}
  {{reject-form selectedReject=selectedReject resp='refreshModel' store=store}}
{{/zf-reveal}}
