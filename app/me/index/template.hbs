<div class="full-width profile-cover-wrapper profile-cover">
  <div class="row column collapse">
      <div class="columns text-right" style="width:37%">
        <div class="name hover-edit">          
          {{model.firstName}}
          <span>
            {{#link-to "me.edit" model.id (query-params tab="personal")}}       
              <i class="icons pencil icon-left"></i>
            {{/link-to}}
            {{model.lastName}}
          </span>
        </div>
      </div>
      <div class="columns" style="width:26%">
        <div class="profile-photo circle">
          {{image-upload fileLoaded="fileLoaded" logoUrl=model.avatarUrl}}
        </div>
      </div>

      <div class="columns" style="width:37%">
        <div class="location hover-edit">
          {{location.city}}<br>
          <big>{{location.state}} 
            {{#link-to "me.edit" model.id (query-params tab="personal")}}                 
              <i class="icons pencil"></i>
            {{/link-to}}
          </big>        
        </div>
      </div>
  </div>  
</div>

<div class="row column">


  <div class="medium-6 float-left box profile profile-bar rounded hover-edit hover-edit-absolute">
    <div class="position">{{ model.currentTitle}}</div>
    <strong class="text-upper">{{model.currentCompany}}</strong>
    {{#link-to "me.edit" model.id (query-params tab="work") }}       
      <i class="icons pencil"></i>
    {{/link-to}}
  </div>
  <div class="medium-6 float-right profile wrapper">
    {{partial "partials/profile-actions" }}
  </div>
</div>

<div class="row">
  <div class="columns medium-7">
    {{ share-box 
      postToNewsfeed='postToNewsfeed' 
      profile=model 
      submit='postFeed' }}

    {{newsfeed-list newsfeed=posts me=me}}
  </div>

  <div class="columns medium-5 sidebar">
    {{partial 'partials/profile-sidebar'}}
  </div>
</div>


