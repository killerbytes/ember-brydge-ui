<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="page-heading">
      <h1>{{link-to "Ask:" "me.ask"}} Outbox</h1>
      <p class="text-center">
        Questions you have asked other users. If theyâ€™re answered, they will move to your public ASK page.
      </p>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-7 medium-7 columns">
    {{#each model as |item| }}
      <div class="box {{if (eq item.id qid) 'highlight'}}">
        <section>
          <div class="user mb">
            <div class="avatar" style={{htmlSafeImage item.from.profile.avatarUrl }}>
              <img src= {{item.from.profile.avatarUrl}} class="hide">
            </div>
            <div class="user-info">
              <span class="name">
                You asked {{link-to item.to.profile.fullName "profile" item.to.id}}
              </span>
              <div class="timestamp">{{timestamp item.updatedAt}}</div>
            </div>
          </div>

          {{item.question}}
        </section>

      </div>
    {{else}}
      <div class="box">
        <section>Nothing to see here</section>
      </div>
    {{/each}}
    {{#infinity-loader infinityModel=model}}
      <div class="loader">Loading...</div>
    {{/infinity-loader}}
    


  </div>
  <div class="large-5 medium-5 columns sidebar">
    {{ partial 'partials/user-guide-box' }}
    {{ partial "footer"}}
  </div>
</div>


{{answer-form}}
