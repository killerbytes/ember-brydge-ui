<div class="row">
  <div class="large-7 medium-7 columns">
    <div class="page-heading">
      <h1>Questions: Outbox</h1>
      <p class="text-center">
      </p>
    </div>
    {{#each fromPending as |item| }}
      <div class="box {{if (eq item.id qid) 'highlight'}}">
        <section>
          You asked {{link-to item.to.profile.fullName "profile" item.to.id class="name"}}
          <div class="timestamp mb">{{timestamp item.updatedAt}}</div>
          {{item.question}}
        </section>

      </div>
    {{else}}
      <div class="box">
        <section>Nothing to see here</section>
      </div>
    {{/each}}


  </div>
  <div class="large-5 medium-5 columns sidebar">
    {{ partial 'partials/user-guide-box' }}
    {{ partial "footer"}}
  </div>
</div>


{{answer-form}}
