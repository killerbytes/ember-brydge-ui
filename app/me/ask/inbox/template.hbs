<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="page-heading">
      <h1>{{link-to "Ask:" "me.ask"}} Inbox</h1>
      <p class="text-center">
        Questions that users have asked you. Answer the ones you want to. Delete the ones you donâ€™t. Flag the ones that you consider inappropriate or spam.
      </p>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-7 medium-7 columns">

    {{#each toPending as |item| }}
      <div class="box {{if (eq item.id qid) 'highlight'}}">
        <section>
          <div class="section-main">
            <div class="user mb">
              <div class="avatar" style={{htmlSafeImage item.from.profile.avatarUrl }}>
                <img src= {{item.from.profile.avatarUrl}} class="hide">
              </div>
              <div class="user-info">
                <span class="name">
                  Asked by {{link-to item.from.profile.fullName "profile" item.from.id}}
                </span>
                <div class="timestamp">{{timestamp item.updatedAt}}</div>
              </div>
            </div>

            <div class="content-pad">{{item.question}}</div>
            <div class="section-footer-buttons">
              <a {{action "select" item }} class="button success rounded" data-open="answerFormModal">Write Answer</a>
              <a {{action "delete" item }} class="button button-border rounded">Delete</a>
              <a {{action "delete" item }} class="button button-border rounded">Flag</a>
            </div>
          </div>
        </section>
      </div>
    {{else}}
      <div class="box">
        <section>No Pending Questions</section>
      </div>
    {{/each}}

  </div>
  <div class="large-5 medium-5 columns sidebar">
    {{ partial 'partials/user-guide-box' }}
    {{ partial "footer"}}
  </div>
</div>


{{answer-form-modal}}
