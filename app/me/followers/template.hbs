<div class="row">
  <div class="medium-6 medium-centered columns">
    <div class="page-heading">
      <h1>Followers</h1>
      <p class="text-center">

      </p>
    </div>
  </div>
</div>

<div class="row">
  <div class="box row columns">
    <section>
      <form>
        {{input value=key type="search" placeholder="Search by Name" class="no-margin"}}
      </form>
    </section>
    <section class="row columns bg-gray user-list">
      {{#each followers as |item|}}
        <div class="columns">
          {{follow-box item=item meta=meta me=true onFollow="follow"}}
        </div>
      {{/each}}
    </section>
  </div>

</div>
