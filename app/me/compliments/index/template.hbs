<div class="row">
  <div class="medium-5 columns sidebar">
    {{profile-box profile=profile class="mb20" isOwner=true}}
    <div class="box">
      <section class="title">
        <h4>Compliments Requiring Approval</h4>
      </section>
      <div class="section-group">
        {{#if toPendingSidebar}}
          {{#each toPendingSidebar as |item| }}
            <section>
              <div class="user">
                complimented by {{link-to item.from.name "profile" item.from.id}}
                <div class="timestamp">{{timestamp item.createdAt}}</div>                
              </div>
              <div class="content-pad">
                <span>{{item.title}}</span>
                {{item.content}}
              </div>
              <div class="section-footer-links">
                <ul class="menu">
                  <li><a {{action 'accept' item.id}}>Add to profile</a></li>
                  <li><a {{action 'reject' item.id}}>Delete</a></li>
                </ul>                       
              </div>      
            </section>
          {{/each}}
        {{else}}
          <p class="columns">No pending</p>  
        {{/if}}
      </div>
      {{#link-to 'me.compliments.pending' class="footer-button button expanded" }}
        Load More
      {{/link-to}}

    </div>

    <div class="box">
      <section class="title">
        <h4>Compliments you have posted</h4>
      </section>
      <div class="section-group">
        {{#if fromAcceptSidebar }}
          {{#each fromAcceptSidebar as |item| }}
            <section>
              <div class="user">
                You complimented {{link-to item.to.name "profile" item.to.id}}
                <div class="timestamp">{{timestamp item.createdAt}}</div>                
              </div>
              <div class="content-pad">
                <span>{{item.title}}</span>
                {{item.content}}
              </div>
              <div class="section-footer-links">
                <ul class="menu">
                  <li><a {{action 'delete' item.id}}>Delete this compliment</a></li>
                </ul>                       
              </div>      
            </section>
          {{/each}}
          {{else}}
            <p>You haven't posted a compliment yet</p>  
          {{/if}}

      </div>
      {{#link-to 'me.compliments.posted' class="footer-button button expanded" }}
        See More
      {{/link-to}}
    </div>

  </div>

  <div class="medium-7 columns">
    {{profile-menu isOwner=true}}
    <div class="page-heading">      
      <h1>Your Compliments Page</h1>
    </div>

    <form>
      <div class="row collapse">
        <div class="small-8 columns">
          <label for="right-label" class="text-right middle">Filter compliments by&nbsp;&nbsp;</label>
        </div>
        <div class="small-4 columns">
        {{select-native content=complimentTitles action=(action (mut complimentTitle)) }}
        </div>
      </div>
    </form>

    <div class="cards">
      {{#each compliments as |item|}}
      <div class="box">
        <section>
          <div class="row user section-main">
            <div class="columns medium-8">
              <div class="avatar" style={{htmlSafeImage item.from.profile.avatarUrl}}>
                <img src="{{item.from.profile.avatarUrl}}" class="hide">
              </div>
              <div class="user-info">
                {{link-to item.from.name "profile" item.from.id}} complimented {{link-to item.to.name "profile" 'me'}}              
              </div>            
            </div>
            <div class="columns medium-4 text-right">
              <div class="timestamp">{{timestamp item.createdAt}}</div>                          
            </div>
          </div>        
        </section>
        <section>
          <div class="content-pad">
            <div class="title">{{item.title}}</div>
            <p class="content">{{item.content}}</p>
          </div>
        </section>
      </div>
      {{/each}}
    </div>
  </div>
</div>