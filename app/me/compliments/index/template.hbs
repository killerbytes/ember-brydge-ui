<div class="row">
  <div class="columns">
    <div class="top-banner bg-gray box">
      <h1>YOUR COMPLIMENTS PAGE</h1>{{log ls}}
    </div>
  </div>
</div>
<div class="row ask">
  <div class="medium-7 columns">
    <div class="tabs-content compliments box">
      <div class="filter-bar columns text-right">
        <form>
          <div class="row collapse">
            <div class="small-8 columns">
              <label for="right-label" class="text-right middle">Filter compliments by&nbsp;&nbsp;</label>
            </div>
            <div class="small-4 columns">
            {{select-native content=complimentTitles action=(action (mut complimentTitle)) }}
            </div>
          </div>
        </form>

      </div>
      <div class="padding clear">
          {{#each compliments as |item|}}
          <div class="media-object">
            <div class="media-object-section">
              <div class="thumbnail">
                <img src="{{item.from.profile.avatarUrl}}">
              </div>
            </div>
            <div class="media-object-section main-section">
              {{link-to item.from.name "profile" item.from.username class="user"}} <span class="text-light">complimented</span> {{link-to item.to.name "profile" 'me' class="user"}}
              <p class="timestamp text-light">{{postDateFormat item.createdAt}}</p>              
              <strong class="title text-upper">{{item.title}}</strong>
              <p class="content">{{item.content}}</p>               
            </div>
          </div>
          {{/each}}
      </div>
    </div>
  </div>
  <div class="medium-5 columns sidebar">
    <div class="box rounded question-box compliments">
      <h5 class="box-header text-upper">Compliments Requiring Approval</h5>
      {{#if toPendingSidebar}}
        <ul class="no-bullet pending-list">
        {{#each toPendingSidebar as |item| }}
          <li>
            <div class="columns wrapper clearfix">
              <div class="title">{{item.title}}</div>
              <p class="content">{{item.content}}</p>               
              <div class="text-light">complimented by {{link-to item.from.name "profile" item.from.username class="user"}}</div>
              <p class="timestamp text-light mb5">{{postDateFormat item.createdAt}}</p>
            </div>
            <div class="question-box-footer">
              <ul class="menu menu-dotted">
                <li><a class="float-right" {{action 'acceptCompliment' item.id}}>Add to profile</a></li>
                <li><a class="float-right" {{action 'rejectCompliment' item.id}}>Delete</a></li>
              </ul>                       
            </div>      
          </li>
        {{/each}}
        </ul>
        {{#link-to 'me.compliments.pending' class="footer-button button expanded" }}
          Load More
        {{/link-to}}
      {{else}}
        <p class="columns">No pending</p>  
      {{/if}}    
    </div>

    <div class="box rounded question-box compliments">
      <h5 class="box-header text-upper">Compliments you have posted</h5>
      {{#if fromAcceptSidebar }}
        <ul class="no-bullet pending-list">
        {{#each fromAcceptSidebar as |item| }}
          <li>
            <div class="columns wrapper clearfix">
              <div class="title">{{item.title}}</div>
              <p class="content">{{item.content}}</p>               
              <div class="text-light">You complimented {{link-to item.to.name "profile" item.to.username class="user"}}</div>
              <p class="timestamp text-light mb5">{{postDateFormat item.createdAt}}</p>
            </div>
            <div class="question-box-footer">
              <ul class="menu menu-dotted">
                <li><a class="float-right" {{action 'toggleHide' item.id}}>Delete this compliment</a></li>
              </ul>                       
            </div>      
          </li>
        {{/each}}
        </ul>
        {{#link-to 'me.compliments.posted' class="footer-button button expanded" }}
          See More
        {{/link-to}}
      {{else}}
        <p>You haven't posted a compliment yet</p>  
      {{/if}}    
    </div>

    {{render "progress-box"}}
    {{render "footer"}}
  </div>
</div>