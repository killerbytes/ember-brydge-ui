<div class="row"> 
  <div class="large-7 medium-7 columns">
    <div class="page-heading">      
      <h1>Pending Compliment Requests</h1>
      <p class="text-center">
      </p>                    
    </div>
    {{#each toPending as |item| }}
      <div class="box {{if (eq item.id qid) 'highlight' }}">
        <section>
          <div class="user mb">
            Complimented by {{link-to item.from.name "profile" item.from.id class="name"}}
            <div class="timestamp">{{timestamp item.createdAt}}</div>                
          </div>
          <strong>{{item.title}}:</strong>
          <div class="content-pad">
            {{item.content}}
          </div>
          <div class="section-footer-buttons">
            <a {{action 'accept' item.id}} class="button success rounded">Add to profile</a>
            <a {{action 'reject' item.id}} class="button button-border rounded">Delete</a>
          </div>      
        </section>
      </div>      
    {{/each}}
  </div>
  <div class="large-5 medium-5 columns sidebar">
    {{ partial 'partials/user-guide-box' }}
    {{ partial "footer"}}
  </div>
</div>