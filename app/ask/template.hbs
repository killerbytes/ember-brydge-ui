<div class="row ask wrapper">
	{{#unless profile.settings.ask}}
	<div class="overlay-wrapper">
		<div class="overlay">
		</div>
	</div>
	{{/unless}}

  <div class="medium-5 columns sidebar">
    {{profile-box profile=profile class="mb20"}}
    {{partial 'partials/profile-sidebar'}}
  </div>
  <div class="medium-7 columns">
		{{profile-menu profile=profile}}
  	{{#if askEnabled}}
			{{#if askUserEnabled}}
				<form {{action 'submit' on='submit'}} class="box user-top-form mb20">
					{{#unless isAsked}}
						<section>
							{{form-text-counter placeholder="Ask anyone a professional question. If answered, it will appear on both profiles." limit=140 value=question rows=3 showCount=true class="mb"}}
							<div class="row">
								<div class="columns medium-8 text-gray">
								</div>
								<div class="columns medium-4 text-right">
									<button class="button btn success">Ask</button>
								</div>
							</div>
						</section>
					{{else}}
						<p>
							Your question has been sent.
						</p>
					{{/unless}}
				</form>
			{{else}}
				<form action="" class="box user-top-form mb20">
					<section>
						<p class="text-center">{{profile.firstName}} has turned Ask OFF.</p>
					</section>
				</form>
			{{/if}}
		{{else}}
			<form action="" class="box user-top-form mb20">
				<section>
					<p class="text-center">You have turned Ask OFF. Turn it on in {{link-to "Settings" "settings" (query-params tab="ask")}}.</p>
				</section>
			</form>
		{{/if}}

		<div class="mb">
			{{#zf-tabs id="ask-tabs" class="tab-controls tabs"}}
	      <li class="tabs-title is-active">
					<a href="#panel1" aria-selected="true">Answered</a></li>
	      <li class="tabs-title">
					<a href="#panel2">Asked</a>
				</li>
	    {{/zf-tabs}}
		</div>

		<div class="tabs-content" data-tabs-content="ask-tabs">
      <div class="tabs-panel is-active" id="panel1">
				{{#each toQuestions as |item| }}
					{{ask-card item=item isOwner=false}}
				{{else}}
					<div class="box">
						<section>
							<div class="empty-message">
								{{profile.firstName}} hasn't answered any questions
							</div>
						</section>
					</div>
				{{/each}}

				{{#brydge-scroller id="toQuestions" model=toQuestions onClick="load"}}
		      {{#if isLoading}}
		        <div class="brydge-loading"></div>
		      {{/if}}
		    {{/brydge-scroller}}

      </div>
      <div class="tabs-panel" id="panel2">
				{{#each fromQuestions as |item| }}
					{{ask-card item=item isOwner=false}}
				{{else}}
					<div class="box">
						<section>
							<div class="empty-message">
								{{profile.firstName}} hasn't asked any questions
							</div>
						</section>
					</div>
				{{/each}}
				{{#brydge-scroller id="fromQuestions" model=fromQuestions onClick="load"}}
		      {{#if isLoading}}
		        <div class="brydge-loading"></div>
		      {{/if}}
		    {{/brydge-scroller}}

      </div>
    </div>




  </div>
</div>

{{answer-form}}
