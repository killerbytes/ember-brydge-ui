<div class="row">
	<div class="columns">
		<div class="top-banner box bg-white">
			<h1>People Search</h1>

		</div>
	</div>
</div>

<div class="row">
  <div class="column">
    <div class="box rounded">
      <div class="row column collapse border-b">
        <div class="medium-4 columns">
          <div class="people-search-filter-column">
            <a class="button success expanded" data-open="industryModal">Industry</a>
          </div>    
        </div>
        <div class="medium-4 columns">
          <div class="people-search-filter-column">
           {{dropdown-filter
              items=locations 
              selected=valueText 
              query='query'
              itemSelected='citySelected'
              template="partials/location-filter"}}
      
            <a {{ action "addCity" }}>{{fa-icon "plus-circle"}}</a>
          </div>    
        </div>
        <div class="medium-4 columns">
          <div class="people-search-filter-column">
            {{input value=keyword }}
            <a {{ action "addKeyword" }}>{{fa-icon "plus-circle"}}</a>            
          </div>    
        </div>      
      </div>
      <div class="columns medium-10 filter-selections">
        <ul class="menu">
        {{#each cities as |item|}}
          <li><span class="label label-item"><a>{{fa-icon "close"}}</a> {{item}}</span></li>
        {{/each}}
        </ul>
        <ul class="menu">
          <li><span class="label label-item"><a>{{fa-icon "close"}}</a> Fast Moving Consumer Goods</span></li>
          <li><span class="label label-item"><a>{{fa-icon "close"}}</a> Fast Moving Consumer Goods</span></li>
        </ul>      
        <ul class="menu">
        {{#each keywords as |item|}}
          <li><span class="label label-item"><a>{{fa-icon "close"}}</a> {{item}}</span></li>
        {{/each}}
        </ul>
      </div>
      <div class="columns medium-2">
        <div>
          <a href="" class="success button expanded">Refresh</a>
        </div>
      </div>        
    </div>
  </div>
</div>


<div class="row">
  <div class="medium-8 columns">
  	<div class="box rounded">
  		<div class="padding">
	  		We found <span>{{search.results.length}}</span> results based on your search terms:
  		</div>
			<ul class="no-bullet connections-list">
				{{#each search.results as |item|}}
			  <li>
			      <div class="media-object">
			        <div class="media-object-section">
			          <div class="thumbnail">
			            <img src="{{item.avatarUrl}}">
			          </div>
			        </div>
			        <div class="media-object-section media-object-content">
                {{#link-to 'profile' item.username class="name"}}
                  {{ item.name }}
                {{/link-to}}
			          <div class="position">
			            <div>{{item.title}}</div>
			            <div>{{item.company}}</div>
			          </div>
			          <p class="location">{{item.location}}</p>
			        </div>
			      </div>
			  </li>
			  {{/each}}
			</ul>

  	</div>
          <a class="button" data-open="industryModal">Industry</a>
  </div>

  <div class="medium-4 columns sidebar">
  </div>
</div>

<ul>
</ul>



{{#zf-reveal id="industryModal" overlay=true class="reveal-popup"}}
    <h4>Industry</h4>
    <form action="">
      <div class="content">        
    
      </div>
      <div class="reveal-footer text-right">
        <div class="content">
          <button class="button success">Done</button>
          <a class="button success" data-close>Cancel</a>
        </div>
      </div>
    </form>
{{/zf-reveal}}



{{#zf-tabs class="hide"}}
  <li class="tabs-title is-active"><a href="#root">Root</a></li>
  {{#each model.categories as |item|}}
      <li class="tabs-title"><a href="#{{item.code}}">{{item.name}}</a></li>
      {{#each item.categories as |category|}}
        <li class="tabs-title"><a href="#{{category.code}}">{{category.name}}</a></li>
      {{/each}}
  {{/each}}  
{{/zf-tabs}}

<div class="tabs-content" data-tabs-content="example-tabs">

  <div class="tabs-panel is-active" id="root">
    <p>
      <strong>Sectors</strong>
    </p>
    <ul class="no-bullet">
      {{#each model.categories as |item|}}
        <li><a {{action "goto" item.code }}>{{item.name}}</a></li>
      {{/each}}
    </ul>
  </div>

  {{#each model.categories as |item|}}
    <div class="tabs-panel" id="{{item.code}}">
      <a {{action "goto" "root" }} class="button">Back</a>
      <p>
        <strong>{{item.name}}</strong>
      </p>
      <p>
        <ul class="no-bullet">
        {{#each item.categories as |item|}}
          <li><a {{action "goto" item.code }}>{{item.name}}</a></li>
        {{/each}}
        </ul>
      </p>
    </div>

    {{#each item.categories as |category|}}
      <div class="tabs-panel" id="{{category.code}}">
        <a {{action "goto" item.code }} class="button">Back</a>
        <p>
          <strong>{{category.name}}</strong>
        </p>
        <p>          
          <ul class="no-bullet">
          {{#each category.industries as |industry|}}
            <li>
              <label for="{{industry.data.code}}"> 
                <input type="checkbox"
                 id="{{industry.data.code}}"
                 {{action "selected" industry on="change"}}/>            
                 {{industry.data.subIndustry}}
              </label>
            </li>
          {{/each}}
          </ul>
        </p>
      </div>

    {{/each}}
  {{/each}}
</div>